<Window x:Class="IPCSoftware.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
        xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
        mc:Ignorable="d"
        Title="IPC HMI Software" 
        Height="1080" Width="1920"
        WindowState="Maximized" 
       WindowStyle="None"
        Background="#F3F3F3" 
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBoolConverter"/>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="90"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#EEEEEE"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="30,0"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E5FA8"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="110" Panel.ZIndex="100">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1E3A8A" Offset="0"/>
                        <GradientStop Color="#1E4FA8" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.3" BlurRadius="10"/>
                </Grid.Effect>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ContentControl x:Name="RibbonHost" Grid.Column="0" VerticalAlignment="Stretch"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Button Content="—" 
                            Command="{Binding MinimizeAppCommand}" 
                            Style="{StaticResource WindowControlButtonStyle}" 
                            Height="50" Width="60"
                            ToolTip="Minimize"/>

                    <Button Command="{Binding CloseAppCommand}" 
                            ToolTip="Close Application"
                            Width="80" Height="50"
                            Background="Transparent" 
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}">
                                    <Path x:Name="icon"
                                          Data="M 10,10 L 30,30 M 30,10 L 10,30"
                                          Stroke="White"
                                          StrokeThickness="3"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                        <Setter TargetName="icon" Property="Stroke" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#B90D1C"/>
                                        <Setter TargetName="icon" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ContentControl x:Name="MainContent" Grid.Column="1" Margin="0"/>

                <Border Grid.Column="0" Grid.ColumnSpan="2"
                        VerticalAlignment="Bottom"
                        Panel.ZIndex="999"
                        Background="{Binding AlarmBannerColor}"
                        BorderThickness="0,2,0,0"
                        BorderBrush="#B71C1C">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Height" Value="0"/>
                            <Setter Property="Visibility" Value="Collapsed"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAlarmBannerVisible}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Height" From="0" To="70" Duration="0:0:0.4">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <!--<Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="⚠️" FontSize="32" Foreground="White" VerticalAlignment="Center" Margin="30,0">
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.3" Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="CRITICAL SYSTEM ALARM" Foreground="White" Opacity="0.8" FontSize="12" FontWeight="Bold" />
                            <TextBlock Text="{Binding AlarmBannerTotalMessage}" Foreground="White" FontSize="24" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                Command="{Binding CloseAlarmBannerCommand}"
                                Content="✕"
                                Width="60" 
                                Background="Transparent" BorderThickness="0"
                                Foreground="White" FontSize="24" FontWeight="Bold"
                                Cursor="Hand" Margin="0,0,20,0"/>
                    </Grid>-->

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="⚠️" FontSize="32" Foreground="White" VerticalAlignment="Center" Margin="30,0">
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.3" Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="CRITICAL SYSTEM ALARM" Foreground="White" Opacity="0.8" FontSize="12" FontWeight="Bold" />
                            <TextBlock Text="{Binding AlarmBannerTotalMessage}" Foreground="White" FontSize="24" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                Orientation="Horizontal" 
                VerticalAlignment="Center" 
                Margin="0,0,20,0">

                            <!--<Button Content="ACK"
                Command="{Binding AcknowledgeCommand}" 
                
                CommandParameter="{Binding CurrentAlarm}" 
                
                Background="#FFC107" BorderThickness="0"
                Foreground="Black" FontSize="14" FontWeight="Bold"
                Width="80" Height="40"
                Margin="0,0,10,0"
                Cursor="Hand"/>-->

                            <Button Command="{Binding CloseAlarmBannerCommand}"
                Content="✕"
                Width="40" 
                Background="Transparent" BorderThickness="0"
                Foreground="White" FontSize="24" FontWeight="Bold"
                Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>


                <Border Grid.Column="1" Background="#99000000" Panel.ZIndex="9">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsSidebarOpen}" Value="True"/>
                                        <Condition Binding="{Binding IsSidebarDocked}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding CloseSidebarCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Border>

                <Border x:Name="SideMenu"
                        Width="310"
                        Background="#1E4FA8"
                        BorderBrush="#1E4FA4"
                        BorderThickness="0,0,1,0"
                        Panel.ZIndex="10">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Grid.Column" Value="0"/>
                            <Setter Property="Grid.ColumnSpan" Value="2"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebarOpen}" Value="False">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform X="-360"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsSidebarOpen}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsSidebarDocked}" Value="True">
                                    <Setter Property="Grid.Column" Value="0"/>
                                    <Setter Property="Grid.ColumnSpan" Value="1"/>
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="120"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" BorderBrush="#333" BorderThickness="0,0,0,1" Margin="10,0">
                            <Grid>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="MENU" Foreground="White" FontSize="30" FontWeight="Bold"/>
                                </StackPanel>

                                <ToggleButton IsChecked="{Binding IsSidebarDocked}"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Top"
                                              Margin="0,10,0,0"
                                              Width="40" Height="40"
                                              ToolTip="Dock Sidebar">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border" Background="Transparent" CornerRadius="5">
                                                <TextBlock x:Name="icon" Text="📌" FontSize="20" Foreground="White" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                    <Setter TargetName="icon" Property="Foreground" Value="#1E4FA8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </Grid>
                        </Border>

                        <!--<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,20,0,0">-->
                            <ScrollViewer Grid.Row="1" 
              VerticalScrollBarVisibility="Hidden" 
              Margin="0,20,0,0"
              PanningMode="VerticalOnly">
                            <ItemsControl ItemsSource="{Binding SidebarItems}" Background="Transparent" >
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" Style="{StaticResource SidebarButtonStyle}"
                                                Command="{Binding DataContext.SidebarItemClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- ================= FOOTER (Row 2) ================= -->
            <Border Grid.Row="2" Background="#1E4FA8" Panel.ZIndex="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <!-- STATUS INDICATOR -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                            <!-- 1. The Dot (Ellipse) -->
                            <Ellipse Width="16" Height="16" Margin="0,0,8,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="Green"/>
                                        <!-- Default: Connected -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PLCConnected}" Value="False">
                                                <Setter Property="Fill" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <!-- 2. The Text -->
                            <TextBlock FontSize="20" FontWeight="Bold" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="PLC CONNECTED"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PLCConnected}" Value="False">
                                                <Setter Property="Text" Value="PLC DISCONNECTED"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>


                            <Ellipse Width="16" Height="16" Margin="20,0,8,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="Green"/>
                                        <!-- Default: Connected -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                                <Setter Property="Fill" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <TextBlock FontSize="20" FontWeight="Bold" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="SERVICE CONNECTED"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                                <Setter Property="Text" Value="SERVICE DISCONNECTED"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            
                            <Ellipse Width="16" Height="16" Margin="20,0,8,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="Green"/>
                                        <!-- Default: Connected -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected2}" Value="False">
                                                <Setter Property="Fill" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <TextBlock FontSize="20" FontWeight="Bold" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="MAC MINI CONNECTED"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected2}" Value="False">
                                                <Setter Property="Text" Value="MAC MINI DISCONNECTED"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            

                        </StackPanel>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                        
                    <TextBlock Text="{Binding SystemTime}" Typography.NumeralAlignment="Tabular" Foreground="#AAAAAA" Margin="0,0,20,0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                      <TextBlock Margin="0,0,20,0" Text="{Binding AppVersion}" Foreground="#AAAAAA" FontSize="13" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                    </StackPanel >

                </Grid>
            </Border>

        </Grid>
    </Viewbox>
</Window>