<UserControl x:Class="IPCSoftware.App.Controls.OeeProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40" Width="350">

    <!-- Root layout container -->

    <Grid Margin="5">

        <!-- Define columns:
             Column 0 ? Left value text
             Column 1 ? Progress bar -->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <!-- Left value text width -->
            <ColumnDefinition Width="20*"/>
            <!-- Progress bar width -->
        </Grid.ColumnDefinitions>

        <!-- LEFT VALUE TEXT -->

        <!-- Displays numeric or percentage value (e.g., 85%) -->
        
        <TextBlock Text="{Binding ValueText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Foreground="White"
                   FontWeight="Bold"/>

        <!-- ================= PROGRESS BAR CONTAINER ================= -->
        
        <Grid Grid.Column="1" Height="40" >
            
            <!-- Background of progress bar -->
            
            <Border Background="#222" CornerRadius="4"/>

            <!-- Filled portion of the progress bar
                 Width changes dynamically based on value -->
            
            <Border Background="{Binding BarColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CornerRadius="4"
                    HorizontalAlignment="Left"
                    Width="{Binding FillWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <!-- Text label displayed on top of the progress bar -->
            
            <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       Foreground="White"
                       FontSize="13"
                       FontWeight="SemiBold"/>
        </Grid>

        <!-- ================= RIGHT SIDE ARROW INDICATOR ================= -->
        
                      <!-- Small arrow showing direction or status -->
        
        <Polygon Grid.Column="1"
                 Points="0,5 8,10 0,15"
                 Fill="Orange"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Margin="5"/>
    </Grid>

</UserControl>
