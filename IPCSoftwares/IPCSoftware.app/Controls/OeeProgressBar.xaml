<UserControl x:Class="IPCSoftware.App.Controls.OeeProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40" Width="350">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <!-- Value -->
            <ColumnDefinition Width="20*"/>
            <!-- Bar -->
        </Grid.ColumnDefinitions>

        <!-- LEFT VALUE TEXT -->
        <TextBlock Text="{Binding ValueText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Foreground="White"
                   FontWeight="Bold"/>

        <!-- PROGRESS BAR BLOCK -->
        <Grid Grid.Column="1" Height="40" >
            <!-- Background -->
            <Border Background="#222" CornerRadius="4"/>

            <!-- Filled section -->
            <Border Background="{Binding BarColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CornerRadius="4"
                    HorizontalAlignment="Left"
                    Width="{Binding FillWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <!-- Label on bar -->
            <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       Foreground="White"
                       FontSize="13"
                       FontWeight="SemiBold"/>
        </Grid>

        <!-- Arrow (right side) -->
        <Polygon Grid.Column="1"
                 Points="0,5 8,10 0,15"
                 Fill="Orange"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Margin="5"/>
    </Grid>

</UserControl>
