<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#272727"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#333333"/>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="TableHeaderBrush" Color="#888888"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#DC3545"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>

</ResourceDictionary>