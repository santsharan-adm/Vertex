<Window x:Class="IPCSoftware.App.Views.FullImageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Preview" Width="900" Height="500"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"  
        Background="Transparent" 
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Geometry x:Key="Icon_Close">M 10,10 L 40,40 M 40,10 L 10,40</Geometry>

        <Style x:Key="CloseIconButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="55"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6B6B"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" CornerRadius="12" BorderBrush="#33FF6B6B" BorderThickness="2">
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Path Data="{StaticResource Icon_Close}" Stroke="{TemplateBinding Foreground}" StrokeThickness="8" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Height="40" Width="40" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#22FF6B6B"/>
                                <Setter Property="Foreground" Value="#FF4C4C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#44FF6B6B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="12" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.2"/>
        </Border.Effect>
        <Border.Clip>
            <RectangleGeometry Rect="0,0,880,480" RadiusX="12" RadiusY="12"/>
        </Border.Clip>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Image -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#EEE" BorderThickness="0,0,1,0">
                <Grid>
                    <Image Source="{Binding ImagePath}" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20"/>
                </Grid>
            </Border>

            <!-- Right: Details -->
            <Grid Grid.Column="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Style="{StaticResource CloseIconButtonStyle}" Command="{Binding CloseCommand}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-15,-15,0"/>

                <StackPanel Grid.Row="1" Margin="0,10,0,30">
                    <TextBlock Text="Latest Measurements" FontSize="22" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock Text="{Binding MeasurementTitle}" FontSize="14" Foreground="#888" Margin="0,5,0,0"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="PARAMETER" Foreground="#AAA" FontWeight="Bold" FontSize="12"/>
                    <TextBlock Grid.Column="1" Text="VALUE" Foreground="#AAA" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="SPECS" Foreground="#AAA" FontWeight="Bold" FontSize="12" HorizontalAlignment="Right"/>
                </Grid>

                <StackPanel Grid.Row="3">
                    <!-- X Row -->
                    <Grid Margin="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="X" FontSize="18" Foreground="#333" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- Bound Foreground to StatusBrushX -->
                            <TextBlock Text="{Binding XValue, StringFormat=F2}" FontSize="18" FontWeight="Bold" Foreground="{Binding StatusBrushX}"/>
                            <TextBlock Text="{Binding XUOM}" FontSize="14" FontWeight="SemiBold" Foreground="{Binding StatusBrushX}" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>
                        <!-- Bound limits to LimitX properties -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="{Binding LimitX_Min, StringFormat=F2}" FontSize="16" Foreground="#555"/>
                            <TextBlock Text=" - " FontSize="16" Foreground="#555"/>
                            <TextBlock Text="{Binding LimitX_Max, StringFormat=F2}" FontSize="16" Foreground="#555"/>
                        </StackPanel>
                    </Grid>
                    <Separator Background="#EEE"/>

                    <!-- Y Row -->
                    <Grid Margin="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Y" FontSize="18" Foreground="#333" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- Bound Foreground to StatusBrushY -->
                            <TextBlock Text="{Binding YValue, StringFormat=F2}" FontSize="18" FontWeight="Bold" Foreground="{Binding StatusBrushY}"/>
                            <TextBlock Text="{Binding YUOM}" FontSize="14" FontWeight="SemiBold" Foreground="{Binding StatusBrushY}" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>
                        <!-- Bound limits to LimitY properties -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="{Binding LimitY_Min, StringFormat=F2}" FontSize="16" Foreground="#555"/>
                            <TextBlock Text=" - " FontSize="16" Foreground="#555"/>
                            <TextBlock Text="{Binding LimitY_Max, StringFormat=F2}" FontSize="16" Foreground="#555"/>
                        </StackPanel>
                    </Grid>
                    <Separator Background="#EEE"/>

                    <!-- Z/Theta Row -->
                    <Grid Margin="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="θ" FontSize="18" Foreground="#333" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- Bound Foreground to StatusBrushZ -->
                            <TextBlock Text="{Binding ZValue, StringFormat=F2}" FontSize="18" FontWeight="Bold" Foreground="{Binding StatusBrushZ}"/>
                            <TextBlock Text="{Binding ZUOM}" FontSize="14" FontWeight="SemiBold" Foreground="{Binding StatusBrushZ}" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>
                        <!-- Bound limits to LimitZ properties -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="{Binding LimitZ_Min, StringFormat=F2}" FontSize="16" Foreground="#555"/>
                            <TextBlock Text=" - " FontSize="16" Foreground="#555"/>
                            <TextBlock Text="{Binding LimitZ_Max, StringFormat=F2}" FontSize="16" Foreground="#555"/>
                        </StackPanel>
                    </Grid>
                    <Separator Background="#EEE"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>