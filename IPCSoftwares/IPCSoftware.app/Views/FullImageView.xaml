<Window x:Class="IPCSoftware.App.Views.FullImageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Preview" Width="900" Height="500"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        MouseDown="Window_MouseDown"
        BorderBrush="#E0E0E0" BorderThickness="1">

    <Window.Resources>
        <Geometry x:Key="Icon_Close">M 10,10 L 40,40 M 40,10 L 10,40</Geometry>
        <!-- Modern Close Button Style -->
        <Style x:Key="CloseIconButtonStyle" TargetType="Button">
   
                <Setter Property="Height" Value="50"/>
                <Setter Property="Width" Value="55"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#FF6B6B"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="10,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder" 
                           Background="{TemplateBinding Background}" 
                           CornerRadius="12"
                           BorderBrush="#33FF6B6B" 
                           BorderThickness="2">
                                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Path Data="{StaticResource Icon_Close}" 
                                 Stroke="{TemplateBinding Foreground}" 
                                 StrokeThickness="8" 
                                 StrokeStartLineCap="Round" 
                                 StrokeEndLineCap="Round"
                                 Height="40" Width="40" 
                                 Stretch="Uniform"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#22FF6B6B"/>
                                    <Setter Property="Foreground" Value="#FF4C4C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#44FF6B6B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- 1. Image Column (60% width) -->
            <ColumnDefinition Width="1.5*"/>
            <!-- 2. Data Column (40% width) -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= LEFT: IMAGE ================= -->
        <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#EEE" BorderThickness="0,0,1,0">
            <Grid>
                <!-- Optional: subtle checkered pattern or just gray for image area -->
                <Image Source="{Binding ImagePath}"
                       Stretch="Uniform"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="20"/>
            </Grid>
        </Border>

        <!-- ================= RIGHT: DATA TABLE ================= -->
        <Grid Grid.Column="1" Margin="30,30,50,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Close Button Row -->
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Table Header -->
                <RowDefinition Height="*"/>
                <!-- Data Rows -->
            </Grid.RowDefinitions>

            <!-- Close Button (Top Right) -->
            <Button Grid.Row="0" 
                    Style="{StaticResource CloseIconButtonStyle}"
                    Command="{Binding CloseCommand}"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0,-20,-20,0"/>

            <!-- Main Title -->
            <StackPanel Grid.Row="1" Margin="0,30,0,0">
                <TextBlock Text="{Binding MeasurementTitle}" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Foreground="#333"/>
                <!-- Bind this to your Measurement Position (e.g. "Position #5") -->
                <!--<TextBlock Text="{Binding MeasurementTitle}" 
                           FontSize="14" 
                           Foreground="#888" 
                           Margin="0,5,0,0"/>-->
            </StackPanel>

            <!-- Table Header -->
            <Grid Grid.Row="2" Margin="0,30,0,0  ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="PARAMETER" Foreground="#AAA" FontWeight="Bold" FontSize="12"/>
                <TextBlock Grid.Column="1" Text="VALUE" Foreground="#AAA" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="SPECS" Foreground="#AAA" FontWeight="Bold" FontSize="12" HorizontalAlignment="Right"/>
            </Grid>

            <!-- Data Rows -->
            <StackPanel Grid.Row="3">

                <!-- X Row -->
                <Grid Margin="0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="X" FontSize="18" Foreground="#333" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding XValue}" FontSize="18" FontWeight="Bold" Foreground="#28A745"/>
                        <TextBlock Text=" mm" FontSize="14" FontWeight="SemiBold" Foreground="#28A745" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                    </StackPanel>

                    <TextBlock Grid.Column="2" Text="3 - 4" FontSize="16" Foreground="#555" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
                <Separator Background="#EEE"/>

                <!-- Y Row -->
                <Grid Margin="0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Y" FontSize="18" Foreground="#333" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Red Color for Y as per example -->
                        <TextBlock Text="{Binding YValue}" FontSize="18" FontWeight="Bold" Foreground="#DC3545"/>
                        <TextBlock Text=" mm" FontSize="14" FontWeight="SemiBold" Foreground="#DC3545" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                    </StackPanel>

                    <TextBlock Grid.Column="2" Text="3 - 4" FontSize="16" Foreground="#555" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
                <Separator Background="#EEE"/>

                <!-- Z Row -->
                <Grid Margin="0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Z" FontSize="18" Foreground="#333" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ZValue}" FontSize="18" FontWeight="Bold" Foreground="#28A745"/>
                        <TextBlock Text=" mm" FontSize="14" FontWeight="SemiBold" Foreground="#28A745" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                    </StackPanel>

                    <TextBlock Grid.Column="2" Text="0 - 0.5" FontSize="16" Foreground="#555" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
                <Separator Background="#EEE"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>