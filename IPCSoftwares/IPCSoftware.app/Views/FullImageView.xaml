<Window x:Class="IPCSoftware.App.Views.FullImageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Preview" Width="800" Height="600"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="#111111"
        MouseDown="Window_MouseDown">

    <Border BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Image Source="{Binding ImagePath}"
                   Stretch="Uniform"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="20"/>

            <Button Command="{Binding CloseCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,0"
                    Cursor="Hand"
                    Width="88" Height="48">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder" Background="#CC000000" CornerRadius="25" BorderBrush="White" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="CLOSE" Foreground="White" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#DC3545"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>