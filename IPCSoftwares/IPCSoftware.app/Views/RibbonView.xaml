<UserControl x:Class="IPCSoftware.App.Views.RibbonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="90">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#1E3A8A" Offset="0"/>
                <GradientStop Color="#1E4FA8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <!--<StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="20,0">
            <Ellipse Width="48" Height="48" Fill="#50FFFFFF"/>
            <TextBlock Text="AOI System"
                       Margin="15,0"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </StackPanel>-->
        <StackPanel Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="20,0">

            <!-- HOME CIRCLE IMAGE -->
            <Button Width="52" Height="52"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding NavigateLandingPageCommand}">
                <Border Width="48"
                Height="48"
                CornerRadius="24"
                BorderBrush="#80FFFFFF"
                BorderThickness="2">
                    <Border.Background>
                        <ImageBrush ImageSource="/Controls/Images/AOILogo.png"
                            Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
            </Button>

            <!-- TITLE -->
            <TextBlock Text="AOI System"
               Margin="15,0"
               FontSize="26"
               FontWeight="Bold"
               Foreground="White"
               VerticalAlignment="Center"/>
        </StackPanel>

        <!-- CENTER NAV BUTTONS -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10,0">


            <Button Command="{Binding NavigateDashboardCommand}"
                    Style="{StaticResource RibbonButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls/Images/Dashboard2.png"
                            Width="69" Height="78"
                            Margin="0,0,8,0"/>
                    <TextBlock Text="Dashboard"
                   VerticalAlignment="Center"/>
                </StackPanel>
            </Button>


            <Button Command="{Binding NavigateSettingsCommand}"
                     Style="{StaticResource RibbonButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls/Images/setting2.png"
                            Width="69
                           " Height="78
                           "
                            Margin="0,0,8,0"/>
                    <TextBlock Text="Settings"
                                VerticalAlignment="Center"/>
                </StackPanel>
            </Button>



            <Button Command="{Binding NavigateLogsCommand}"
                    Style="{StaticResource RibbonButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls/Images/logfolder.png"
                             Width="69" Height="78"
                            Margin="0,0,8,0"/>
                    <TextBlock Text="Logs"
                            VerticalAlignment="Center"/>
                </StackPanel>
            </Button>



            <Button Command="{Binding NavigateUserMgmtCommand}"
                    Style="{StaticResource RibbonButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls/Images/Configs.png"
                            Width="69" Height="56"
                            Margin="0,0,8,0"/>
                    <TextBlock Text="Config"
                                VerticalAlignment="Center"/>
                </StackPanel>
            </Button>


        </StackPanel>

        <!-- RIGHT PANEL -->
        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    
                    Margin="12">

            <TextBlock Text="{Binding CurrentUserName}"
                       Foreground="White"
                       FontSize="18"
                       VerticalAlignment="Center"/>



            <Button Command="{Binding LogoutCommand}"
                    Style="{StaticResource RibbonButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls/Images/logout2.png"
                            Width="66" Height="78"
                            Margin="0,0,8,0"/>
                    <TextBlock Text="logout"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
