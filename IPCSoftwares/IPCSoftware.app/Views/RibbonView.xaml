<UserControl x:Class="IPCSoftware.App.Views.RibbonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="65">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#1E3A8A" Offset="0"/>
                <GradientStop Color="#1E4FA8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <!-- LOGO -->
            <ColumnDefinition Width="*"/>
            <!-- BUTTONS -->
            <ColumnDefinition Width="240"/>
            <!-- USER PANEL -->
        </Grid.ColumnDefinitions>


        <!-- LEFT PANEL (LOGO + APP TITLE) -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
            <Ellipse Width="36" Height="36" Fill="#50FFFFFF"/>
            <TextBlock Text="IPCSoftwares"
                       Margin="12,0"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </StackPanel>



        <!-- MIDDLE PANEL (NAV BUTTONS) -->
        <StackPanel Grid.Column="1" Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">

            <Button Style="{StaticResource RibbonButtonStyle}"
                    Content="Dashboard"
                    Command="{Binding NavigateDashboardCommand}"/>

            <Button Style="{StaticResource RibbonButtonStyle}"
                    Content="Settings"
                    Command="{Binding NavigateSettingsCommand}"/>

            <Button Style="{StaticResource RibbonButtonStyle}"
                    Content="Logs"
                    Command="{Binding NavigateLogsCommand}"/>

            <Button Style="{StaticResource RibbonButtonStyle}"
                    Content="Config"
                    Command="{Binding NavigateUserMgmtCommand}"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <!--We will introduce RBAC-->
        </StackPanel>



        <!-- RIGHT PANEL (USERNAME + LOGOUT) -->
        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,0">

            <TextBlock Text="{Binding CurrentUserName}"
                       Foreground="White"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Margin="0,0,12,0"/>

            <Button Style="{StaticResource RibbonButtonStyle}"
                    Content="Logout"
                    Command="{Binding LogoutCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>
