<UserControl x:Class="IPCSoftware.App.Views.LogListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
             xmlns:converters="clr-namespace:IPCSoftware.App.Converters"
             helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:LogListViewModel}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToYesNoConverter x:Key="BoolToYesNo"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="List Log Configuration" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="80,0,0,0"/>

            <Button Grid.Column="1" 
                    Content="Add Interface" 
                    Command="{Binding AddInterfaceCommand}"
                    Padding="15,8"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,80,0"
                    Style="{StaticResource HmiEditButton}">
                
            </Button>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Style="{StaticResource HmiDataGridStyle}"
                  Grid.Row="1" 
                  ItemsSource="{Binding LogConfigurations}"
                  SelectedItem="{Binding SelectedLog}"
                  
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  AlternatingRowBackground="#F5F5F5"
                  RowHeight="30"
                  HeadersVisibility="Column"
                  Margin="80,0,80,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                    Binding="{Binding LogName}"
                    Width="1*" />

                <DataGridTextColumn Header="Type"
                    Binding="{Binding LogType}"
                    Width="1*" />

                <DataGridTextColumn Header="Path"
                    Binding="{Binding DataFolder}"
                    Width="2*" />

                <DataGridTextColumn Header="Purge/Retention"
                    Binding="{Binding AutoPurge, Converter={StaticResource BoolToVisibilityConverter}}"
                    Width="1*" />

                <!-- Edit Button Column -->
                <DataGridTemplateColumn Header="" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit" 
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    
                                    
                                    Style="{StaticResource HmiEditButton}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Delete Button Column -->
                <DataGridTemplateColumn Header="" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" 
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    
                                    Style="{StaticResource HmiEditButton}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

