<UserControl x:Class="IPCSoftware.App.Views.LogListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
             xmlns:converters="clr-namespace:IPCSoftware.App.Converters"
             helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:LogListViewModel}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToYesNoConverter x:Key="BoolToYesNo"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="List Log Configuration" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1" 
                    Content="Add Interface" 
                    Command="{Binding AddInterfaceCommand}"
                    Padding="15,8"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding LogConfigurations}"
                  SelectedItem="{Binding SelectedLog}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  AlternatingRowBackground="#F5F5F5"
                  RowHeight="30"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <!-- Name Column -->
                <DataGridTextColumn Header="Name" 
                                    Binding="{Binding LogName}" 
                                    Width="100"/>

                <!-- Type Column -->
                <DataGridTextColumn Header="Type" 
                                    Binding="{Binding LogType}" 
                                    Width="100"/>

                <!-- Path Column -->
                <DataGridTextColumn Header="Path" 
                                    Binding="{Binding DataFolder}" 
                                    Width="200"/>

                <!-- AutoPurge Column -->
                <DataGridTextColumn Header="AutoPurge/Log Retention" 
                                    Binding="{Binding AutoPurge, Converter={StaticResource BoolToVisibilityConverter}}" 
                                    Width="150"/>

                <!-- Edit Button Column -->
                <DataGridTemplateColumn Header="" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit" 
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="10,3"
                                    Background="#F0F0F0"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Delete Button Column -->
                <DataGridTemplateColumn Header="" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" 
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="10,3"
                                    Background="#FFE5E5"
                                    BorderBrush="#FFCCCC"
                                    BorderThickness="1"
                                    Foreground="#CC0000"
                                    Cursor="Hand"
                                    FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

