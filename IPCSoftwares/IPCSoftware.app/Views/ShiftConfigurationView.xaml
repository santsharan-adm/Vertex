<UserControl x:Class="IPCSoftware.App.Views.ShiftConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
             xmlns:converters="clr-namespace:IPCSoftware.App.Converters"
             helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:ShiftConfigurationViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920"
             Background="#F3F3F3">

    <UserControl.Resources>
        <converters:BooleanToYesNoConverter x:Key="BoolToYesNo"/>

        <Style x:Key="HmiColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Height" Value="90"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <Style x:Key="HmiCellStyle" TargetType="DataGridCell">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#CCE8FF"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenterAlignedCellStyle" TargetType="DataGridCell" BasedOn="{StaticResource HmiCellStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LeftAlignedCellStyle" TargetType="DataGridCell" BasedOn="{StaticResource HmiCellStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="30,0,0,0"/>
        </Style>

        <Style x:Key="HmiLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="HmiTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="80"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="HmiCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="2.0" ScaleY="2.0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="600"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Shift Configuration" 
                           FontSize="60" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,30"/>

                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <DataGrid ItemsSource="{Binding Shifts}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              IsReadOnly="True" 
                              RowHeight="100"
                              ColumnHeaderStyle="{StaticResource HmiColumnHeaderStyle}"
                              Background="White"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#E0E0E0"
                              VerticalGridLinesBrush="Transparent">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#FAFAFA"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E6F2FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.AlternationCount>2</DataGrid.AlternationCount>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="120" CellStyle="{StaticResource CenterAlignedCellStyle}"/>

                            <DataGridTextColumn Header="Shift Name" Binding="{Binding ShiftName}" Width="*" CellStyle="{StaticResource LeftAlignedCellStyle}"/>

                            <DataGridTextColumn Header="Time Range" Binding="{Binding TimeRange}" Width="400" CellStyle="{StaticResource CenterAlignedCellStyle}"/>

                            <DataGridTextColumn Header="Active" Binding="{Binding IsActive, Converter={StaticResource BoolToYesNo}}" Width="200" CellStyle="{StaticResource CenterAlignedCellStyle}"/>

                            <DataGridTemplateColumn Header="Actions" Width="350">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                                            <Button Content="Edit" 
                                                    Focusable="False"
                                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Width="140" Height="70" FontSize="24" FontWeight="Bold"
                                                    Background="#007ACC" Foreground="White" BorderThickness="0" Margin="0,0,15,0">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="8"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>

                                            <Button Content="Delete" 
                                                    Focusable="False"
                                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Width="140" Height="70" FontSize="24" FontWeight="Bold"
                                                    Background="#DC3545" Foreground="White" BorderThickness="0">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="8"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>

                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <Grid Grid.Column="2" VerticalAlignment="Top" Margin="0,110,0,0">
                <Border Style="{StaticResource CardStyle}" Padding="40">
                    <StackPanel>
                        <TextBlock Text="Shift Details" FontSize="40" FontWeight="Bold" Foreground="#333" Margin="0,0,0,40" HorizontalAlignment="Center"/>

                        <TextBlock Text="Shift Name" Style="{StaticResource HmiLabelStyle}"/>
                        <TextBox Text="{Binding ShiftName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource HmiTextBoxStyle}" Margin="0,0,0,30"/>

                        <TextBlock Text="Start Time (HH:MM)" Style="{StaticResource HmiLabelStyle}"/>
                        <TextBox Text="{Binding StartTime, StringFormat=hh\\:mm, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource HmiTextBoxStyle}" Margin="0,0,0,30"/>

                        <TextBlock Text="End Time (HH:MM)" Style="{StaticResource HmiLabelStyle}"/>
                        <TextBox Text="{Binding EndTime, StringFormat=hh\\:mm, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource HmiTextBoxStyle}" Margin="0,0,0,30"/>

                        <CheckBox Content=" Is Active" IsChecked="{Binding IsActive}" Style="{StaticResource HmiCheckBoxStyle}" Margin="0,10,0,50"/>

                        <Button Content="SAVE SHIFT" 
                                Command="{Binding SaveCommand}" 
                                Focusable="False"
                                Height="90" FontSize="28" FontWeight="Bold"
                                Background="#28A745" Foreground="White" BorderThickness="0" Margin="0,0,0,10">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Content="CLEAR / NEW" 
                                Focusable="False"
                                Command="{Binding ClearFormCommand}" 
                                Height="90" FontSize="28" FontWeight="SemiBold"
                                Background="#F5F5F5" Foreground="#555" BorderBrush="#CCC" BorderThickness="2">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Viewbox>
</UserControl>