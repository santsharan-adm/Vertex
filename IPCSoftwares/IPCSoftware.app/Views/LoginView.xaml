<UserControl x:Class="IPCSoftware.App.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:IPCSoftware.Helpers;assembly=IPCSoftware.Helpers"
             Background="Transparent">

    <Grid>

        <!-- ================= BACKGROUND IMAGE ================= -->
        <Image Source="/Controls/Images/AOILogin.jpg"
               Stretch="Fill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

        <!-- =============== DARK OVERLAY ================= -->
        <Rectangle Fill="#77000000" />

        <!-- =============== CENTERED LOGIN CARD =============== -->
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              MaxWidth="1150"
              MaxHeight="650">

            <Border Width="900"
                    Height="500"
                    CornerRadius="18"
                    Background="#F7F9FC"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="35"
                                      ShadowDepth="0"
                                      Opacity="0.5"
                                      Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.1*"/>
                        <ColumnDefinition Width="1.4*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ============ LEFT BLUE PANEL ============ -->
                    <Border Grid.Column="0"
                            Background="#245CFF"
                            CornerRadius="18,0,0,18"
                            Padding="40">

                        <StackPanel VerticalAlignment="Center">

                            <TextBlock Text="Welcome"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>

                            <TextBlock Text="Secure Access to AOI System"
                                       FontSize="16"
                                       Foreground="#DDE6FF"
                                       Margin="0,15,0,0"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- ============ RIGHT PANEL (FORM) ============ -->
                    <Grid Grid.Column="1" Background="Transparent">
                        <Border Padding="45">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- TITLE -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                                    <TextBlock Text="Login"
                                               FontSize="30"
                                               FontWeight="Bold"
                                               Foreground="#222"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- USERNAME FIELD -->
                                <Border Grid.Row="1"
                                    Height="48"
                                    CornerRadius="8"
                                    Background="LightGray"
                                    Padding="12"
                                    Margin="0,0,0,15"
                                    BorderBrush="#BFC5D2"
                                    BorderThickness="1">

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="#BFC5D2"/>
                                            <Setter Property="BorderThickness" Value="1"/>

                                            <Style.Triggers>
                                                <!-- Hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#245CFF"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>

                                                <!-- Focus inside (TextBox focuses) -->
                                                <Trigger Property="Tag" Value="Focused">
                                                    <Setter Property="BorderBrush" Value="#245CFF"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <TextBox Text="{Binding Username}"
                                             FontSize="15"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             Foreground="Black">
                                        <TextBox.FocusVisualStyle>
                                            <Style>
                                                <Setter Property="Control.Template">
                                                    <Setter.Value>
                                                        <ControlTemplate>
                                                            <Border BorderBrush="#245CFF"
                                                                BorderThickness="4"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.FocusVisualStyle>
                                    </TextBox>
                                </Border>


                                <!-- PASSWORD FIELD -->
                                <Border Grid.Row="2"
                                        Height="48"
                                        CornerRadius="8"
                                        Background="LightGray"
                                        Padding="12"
                                        Margin="0,0,0,25"
                                        BorderBrush="#BFC5D2"
                                        BorderThickness="1">

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="#BFC5D2"/>
                                            <Setter Property="BorderThickness" Value="1"/>

                                            <Style.Triggers>
                                                <!-- Hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#245CFF"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>

                                                <!-- Focus for PasswordBox -->
                                                <Trigger Property="Tag" Value="Focused">
                                                    <Setter Property="BorderBrush" Value="#245CFF"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <PasswordBox x:Name="PasswordBoxControl"
                     FontSize="15"
                     Background="Transparent"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"
                     helpers:PasswordBoxHelper.BindPassword="True"
                     helpers:PasswordBoxHelper.BindablePassword="{Binding Password, Mode=TwoWay}">
                                            
                                        </PasswordBox>
                                    </Grid>
                                </Border>


                                <!-- LOGIN BUTTON -->
                                <Button Grid.Row="3"
                                        Content="Login"
                                        Command="{Binding LoginCommand}"
                                        Height="48"
                                        FontSize="17"
                                        Foreground="White"
                                        Background="#245CFF"
                                        Cursor="Hand"
                                        BorderThickness="0">

                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1F4EE0"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#173CB5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>

                                </Button>

                            </Grid>
                        </Border>
                    </Grid>

                </Grid>
            </Border>
        </Grid>

    </Grid>

</UserControl>
