<UserControl x:Class="IPCSoftware.App.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:IPCSoftware.Helpers;assembly=IPCSoftware.Helpers"
        Background="#10FFFFFF"
        MinWidth="0"
        MinHeight="0">

    <!-- FULL-SCREEN GRID (NOW ROOT) -->
    <Grid>

        <!-- DRAGGING BORDER (ONLY FOR DRAG, NOT LAYOUT) -->
        <Border Background="Transparent"
                Height="40"
                VerticalAlignment="Top"
                />

        <!-- CENTER LOGIN CARD -->
        <Border Width="450"
                Height="500"
                Background="#40FFFFFF"
                CornerRadius="30"
                BorderBrush="#80FFFFFF"
                BorderThickness="1.5"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect BlurRadius="25"
                                  ShadowDepth="0"
                                  Color="#80000000"/>
            </Border.Effect>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- TITLE -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                    <TextBlock Text="Optical Inspection Machine"
                                   FontSize="26"
                                   FontWeight="SemiBold"
                                   Foreground="Black"
                                   HorizontalAlignment="Center"/>

                    <TextBlock Text="Login"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="0,10,0,0"
                                   HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- USERNAME FIELD -->
                <Border Grid.Row="1"
                            Margin="0,20,0,10"
                            Background="#30FFFFFF"
                            CornerRadius="25"
                            BorderBrush="DarkGray"
                            BorderThickness="5"
                            
                            Padding="10">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- USER ICON -->
                        <Path Grid.Column="0"
                                  Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4                                          1.79-4 4 1.79 4 4 4zm0                                          2c-2.67 0-8 1.34-8                                          4v2h16v-2c0-2.66-5.33-4-8-4z"
                                  Fill="White"
                                  Width="22"
                                  Height="22"
                                  VerticalAlignment="Center"
                                  Opacity="1"/>

                        <TextBox Grid.Column="1"
                                     Text="{Binding Username}"
                                     Foreground="Black"

                                     Background="Transparent"
                                     BorderThickness="0"
                                     BorderBrush="DarkGray"
                                     FontSize="18"
                                     Margin="5,0,10,0"
                                     VerticalContentAlignment="Center"
                                     ToolTip="Username"/>
                    </Grid>
                </Border>

                <!-- PASSWORD FIELD -->
                <Border Grid.Row="2"
                            Margin="0,10,0,20"
                            Background="#30FFFFFF"
                            CornerRadius="25"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            Padding="10">

                    <Grid Margin="1,-1,-1,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <!-- LOCK ICON -->
                        <Path Grid.Column="0"
                                  Data="M12 17c1.1 0 2-.9 2-2v-3h-4v3c0                                          1.1.9 2 2 2zm6-7h-1V7c0-2.76-2.24-5-5-5S7                                          4.24 7 7v3H6c-1.1 0-2                                          .9-2 2v10c0 1.1.9 2 2                                          2h12c1.1 0 2-.9                                          2-2V12c0-1.1-.9-2-2-2zm-3                                          0H9V7c0-1.66 1.34-3 3-3s3                                          1.34 3 3v3z"
                                  Fill="White"
                                  Width="22"
                                  Height="22"
                                  VerticalAlignment="Center"
                                  Opacity="5"/>

                        <!-- PasswordBox -->
                        <PasswordBox
                                Grid.Column="1"
                                FontSize="18"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="Black"
                                VerticalContentAlignment="Center"
                                helpers:PasswordBoxHelper.BindPassword="True"
                                helpers:PasswordBoxHelper.BindablePassword="{Binding Password, Mode=TwoWay}"
                            />      


                    </Grid>
                </Border>

                <!-- LOGIN BUTTON -->
                <Button Grid.Row="3"
                            Content="Login"
                            
                            Command="{Binding LoginCommand}"
                            Width="220"
                            Height="48"
                            FontSize="20"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Background" Value="#234F78"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="25"   
                                                BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>

                                            <!-- Hover Trigger -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border"
                                    Property="Background"
                                    Value="#2E86FC"/>
                                                <Setter TargetName="border"
                                    Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#80FFFFFF"
                                                      BlurRadius="20"
                                                      ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <!-- Pressed Trigger (optional but looks better) -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border"
                                    Property="Background"
                                    Value="#1C6FD1"/>
                                            </Trigger>

                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                </Button>
            </Grid>

        </Border>

    </Grid>


</UserControl>
