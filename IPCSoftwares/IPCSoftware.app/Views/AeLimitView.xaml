<UserControl x:Class="IPCSoftware.App.Views.AeLimitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
              xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             mc:Ignorable="d"
              helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:AeLimitViewModel}"
             d:DesignHeight="900"
             d:DesignWidth="1400">

    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="CardBorder" Color="#E2E6EF" />

        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Height" Value="60" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CBD5F5" />
            <Setter Property="Background" Value="White" />
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="50" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="#22C55E" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MatrixHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="MatrixRowLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MatrixLiveValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MatrixUnit" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>

        <Style x:Key="RowBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="5,30"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F3F4F6" Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="AE Limit Configuration" FontSize="48" Foreground="#1F2937" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                <!--<Button Content="Refresh" Command="{Binding RefreshCommand}" Width="150" Height="60" Margin="0,0,20,0" Background="Transparent" BorderBrush="#007ACC" BorderThickness="2" Foreground="#007ACC" FontSize="20" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>-->
                <Button Content="Save"  Margin="10" Command="{Binding SaveCommand}" Style="{StaticResource PrimaryButton}" Width="250" Height="60"/>
            </StackPanel>
        </Grid>

        <!-- Matrix -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource CardBorder}" BorderThickness="1" CornerRadius="16" Padding="60">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <!-- Label -->
                    <ColumnDefinition Width="1.5*" />
                    <!-- Live Min -->
                    <ColumnDefinition Width="1.5*" />
                    <!-- New Min -->
                    <ColumnDefinition Width="50" />
                    <!-- Gap -->
                    <ColumnDefinition Width="1.5*" />
                    <!-- Live Max -->
                    <ColumnDefinition Width="1.5*" />
                    <!-- New Max -->
                    <ColumnDefinition Width="0.5*" />
                    <!-- Unit -->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Header -->
                    <RowDefinition Height="Auto" />
                    <!-- Spacer -->
                    <RowDefinition Height="Auto" />
                    <!-- X -->
                    <RowDefinition Height="Auto" />
                    <!-- Y -->
                    <RowDefinition Height="Auto" />
                    <!-- Z -->
                </Grid.RowDefinitions>

                <!-- Headers -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Measurement" Style="{StaticResource MatrixHeader}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Min (Live)" Style="{StaticResource MatrixHeader}" />
                <TextBlock Grid.Row="0" Grid.Column="2" Text="New Min" Style="{StaticResource MatrixHeader}" />
                <TextBlock Grid.Row="0" Grid.Column="4" Text="Max (Live)" Style="{StaticResource MatrixHeader}" />
                <TextBlock Grid.Row="0" Grid.Column="5" Text="New Max" Style="{StaticResource MatrixHeader}" />

                <Border Grid.Row="1" Grid.ColumnSpan="7" BorderBrush="#333" BorderThickness="0,0,0,3" Margin="0,0,0,40"/>

                <!-- Row X -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Inspection X" Style="{StaticResource MatrixRowLabel}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding MinX.CurrentValue, StringFormat=F3}" Style="{StaticResource MatrixLiveValue}"/>
                <TextBox    Grid.Row="2" Grid.Column="2" Text="{Binding MinX.NewValue, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBox}"/>

                <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding MaxX.CurrentValue, StringFormat=F3}" Style="{StaticResource MatrixLiveValue}"/>
                <TextBox    Grid.Row="2" Grid.Column="5" Text="{Binding MaxX.NewValue, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBox}"/>
                <TextBlock Grid.Row="2" Grid.Column="6" Text="mm" Style="{StaticResource MatrixUnit}"/>

                <Border Grid.Row="2" Grid.ColumnSpan="7" Style="{StaticResource RowBorder}"/>

                <!-- Row Y -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Inspection Y" Style="{StaticResource MatrixRowLabel}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding MinY.CurrentValue, StringFormat=F3}" Style="{StaticResource MatrixLiveValue}"/>
                <TextBox    Grid.Row="3" Grid.Column="2" Text="{Binding MinY.NewValue, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBox}"/>

                <TextBlock Grid.Row="3" Grid.Column="4" Text="{Binding MaxY.CurrentValue, StringFormat=F3}" Style="{StaticResource MatrixLiveValue}"/>
                <TextBox    Grid.Row="3" Grid.Column="5" Text="{Binding MaxY.NewValue, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBox}"/>
                <TextBlock Grid.Row="3" Grid.Column="6" Text="mm" Style="{StaticResource MatrixUnit}"/>

                <Border Grid.Row="3" Grid.ColumnSpan="7" Style="{StaticResource RowBorder}"/>

                <!-- Row Z -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Inspection Angle" Style="{StaticResource MatrixRowLabel}"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MinZ.CurrentValue, StringFormat=F3}" Style="{StaticResource MatrixLiveValue}"/>
                <TextBox    Grid.Row="4" Grid.Column="2" Text="{Binding MinZ.NewValue, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBox}"/>

                <TextBlock Grid.Row="4" Grid.Column="4" Text="{Binding MaxZ.CurrentValue, StringFormat=F3}" Style="{StaticResource MatrixLiveValue}"/>
                <TextBox    Grid.Row="4" Grid.Column="5" Text="{Binding MaxZ.NewValue, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBox}"/>
                <TextBlock Grid.Row="4" Grid.Column="6" Text="deg" Style="{StaticResource MatrixUnit}"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>