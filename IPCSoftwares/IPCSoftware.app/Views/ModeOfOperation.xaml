<UserControl x:Class="IPCSoftware.App.Views.ModeOfOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:ModeOfOperationViewModel}"
             Background="#F3F3F3">

    <UserControl.Resources>
        <Style x:Key="HmiColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <Style x:Key="HmiCellStyle" TargetType="DataGridCell">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <DataTemplate x:Key="ModeButtonTemplate">
            <Button Margin="15" Width="330" Height="270"
                    IsEnabled="{Binding IsEnabled}">

                <i:Interaction.Behaviors>
                    <helpers:MomentaryBehavior 
                        Command="{Binding DataContext.UnifiedOperationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding Mode}"/>
                </i:Interaction.Behaviors>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border x:Name="BaseLayer" CornerRadius="15" BorderThickness="1" BorderBrush="#777">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding BaseColor}"/>
                                            </Border.Background>
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.2"/>
                                            </Border.Effect>
                                        </Border>

                                        <Border x:Name="ActiveLayer" CornerRadius="15" BorderThickness="2" BorderBrush="White" Opacity="0">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding ActiveColor}"/>
                                            </Border.Background>
                                            <Border.Effect>
                                                <DropShadowEffect Color="{Binding ActiveColor}" BlurRadius="25" Opacity="0.8"/>
                                            </Border.Effect>
                                        </Border>

                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="BaseLayer" Property="Opacity" Value="0.4"/>
                                            <Setter TargetName="BaseLayer" Property="Effect" Value="{x:Null}"/>
                                            <Setter Property="Foreground" Value="#888"/>
                                        </Trigger>

                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter TargetName="BaseLayer" Property="Opacity" Value="0.9"/>
                                        </Trigger>

                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter TargetName="ActiveLayer" Property="Opacity" Value="1"/>
                                            <Setter TargetName="BaseLayer" Property="Opacity" Value="1"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsBlinking}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard Name="BlinkAnim">
                                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                        <DoubleAnimation Storyboard.TargetName="ActiveLayer"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         From="0.4" To="1.0" Duration="0:0:0.6"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <StopStoryboard BeginStoryboardName="BlinkAnim"/>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="ActiveLayer"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0" Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>

                <TextBlock Text="{Binding Name}" FontSize="45" FontWeight="Bold" Foreground="White" 
                           TextWrapping="Wrap" TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Button>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,20">
            <TextBlock Text="Mode of Operation" FontSize="48" FontWeight="Bold" Foreground="#333"/>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="MACHINE HOME" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMachineHome}" Value="True">
                                    <Setter Property="Foreground" Value="#008000"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Ellipse Width="40" Height="40" Stroke="Black" StrokeThickness="1">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="#DDDDDD"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMachineHome}" Value="True">
                                    <Setter Property="Fill" Value="#00FF00"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#00FF00" BlurRadius="15"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="10" BorderBrush="#CCC" BorderThickness="1">
                <ItemsControl ItemsSource="{Binding ModeButtons}" ItemTemplate="{StaticResource ModeButtonTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="2" Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Border>

            <Border Grid.Column="1" Margin="20 0 0 0" Background="White" CornerRadius="15" Padding="20" BorderBrush="#CCC" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Operation Activity Log" FontSize="32" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,20"/>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding AuditLogs}" AutoGenerateColumns="False"
                              ColumnHeaderStyle="{StaticResource HmiColumnHeaderStyle}"
                              CellStyle="{StaticResource HmiCellStyle}"
                              RowHeight="50" IsReadOnly="True" BorderThickness="0" GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="140"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>