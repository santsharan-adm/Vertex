                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6268"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>-->
        
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding FilteredAlarms}"
                  SelectedItem="{Binding SelectedAlarm}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  AlternatingRowBackground="#F9F9F9"
                  RowHeight="35"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <!-- ID -->
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="50"/>

                <!-- Alarm No -->
                <DataGridTextColumn Header="Alarm No" 
                                    Binding="{Binding AlarmNo}" 
                                    Width="90"/>

                <!-- Alarm Name -->
                <DataGridTextColumn Header="Alarm Name" 
                                    Binding="{Binding AlarmName}" 
                                    Width="120"/>

                <!-- Alarm Text -->
                <DataGridTextColumn Header="Alarm Text" 
                                    Binding="{Binding AlarmText}" 
                                    Width="180"/>

                <!-- Severity -->
                <DataGridTextColumn Header="Severity" 
                                    Binding="{Binding Severity}" 
                                    Width="80"/>

                <!-- Alarm Time -->
                <DataGridTextColumn Header="Alarm Time" 
                                    Binding="{Binding AlarmTime, StringFormat='dd-MMM-yyyy HH:mm'}" 
                                    Width="130"/>

                <!-- Reset Time -->
                <DataGridTextColumn Header="Reset Time" 
                                    Binding="{Binding AlarmResetTime, StringFormat='dd-MMM-yyyy HH:mm'}" 
                                    Width="130"/>

                <!-- Ack Time -->
                <DataGridTextColumn Header="Ack Time" 
                                    Binding="{Binding AlarmAckTime, StringFormat='dd-MMM-yyyy HH:mm'}" 
                                    Width="130"/>

                <!-- Edit Button -->
                <DataGridTemplateColumn Header="" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit" 
                                    Command="{Binding DataContext.EditAlarmCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="10,3"
                                    Background="#F0F0F0"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Delete Button -->
                <DataGridTemplateColumn Header="" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" 
                                    Command="{Binding DataContext.DeleteAlarmCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="10,3"
                                    Background="#DC3545"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>