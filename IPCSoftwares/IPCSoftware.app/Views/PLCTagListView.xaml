<UserControl x:Class="IPCSoftware.App.Views.PLCTagListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPCSoftware.App.Views"
              xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
              xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
              xmlns:converters="clr-namespace:IPCSoftware.App.Converters"
              helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:PLCTagListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:AlgNoToNameConverter x:Key="AlgNoToNameConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="PLC Tag Configuration" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1" 
                    Content="Add Tag" 
                    Command="{Binding AddTagCommand}"
                    Padding="15,8"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Tags}"
                  SelectedItem="{Binding SelectedTag}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  AlternatingRowBackground="#F5F5F5"
                  RowHeight="35"
                  HeadersVisibility="Column">

            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" 
                             Command="{Binding EditTagCommand}" 
                             CommandParameter="{Binding SelectedTag}"/>
            </DataGrid.InputBindings>

            <DataGrid.Columns>
                <!-- Tag No -->
                <DataGridTextColumn Header="Tag No" 
                                    Binding="{Binding TagNo}" 
                                    Width="80"/>

                <!-- Name -->
                <DataGridTextColumn Header="Name" 
                                    Binding="{Binding Name}" 
                                    Width="150"/>

                <!-- PLC No -->
                <DataGridTextColumn Header="PLC No" 
                                    Binding="{Binding PLCNo}" 
                                    Width="80"/>

                <!-- Modbus Address -->
                <DataGridTextColumn Header="Modbus Address" 
                                    Binding="{Binding ModbusAddress}" 
                                    Width="130"/>

                <!-- Length -->
                <DataGridTextColumn Header="Length" 
                                    Binding="{Binding Length}" 
                                    Width="80"/>

                <!-- Alg No - Display name instead of number -->
                <DataGridTextColumn Header="Alg No" 
                                    Width="120">
                    <DataGridTextColumn.Binding>
                        <Binding Path="AlgNo" Converter="{StaticResource AlgNoToNameConverter}"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!-- Offset -->
                <DataGridTextColumn Header="Offset" 
                                    Binding="{Binding Offset}" 
                                    Width="80"/>

                <!-- Span -->
                <DataGridTextColumn Header="Span" 
                                    Binding="{Binding Span}" 
                                    Width="80"/>

                <!-- Description -->
                <DataGridTextColumn Header="Description" 
                                    Binding="{Binding Description}" 
                                    Width="200"/>

                <!-- Remark -->
                <DataGridTextColumn Header="Remark" 
                                    Binding="{Binding Remark}" 
                                    Width="150"/>

                <!-- Edit Button -->
                <DataGridTemplateColumn Header="" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit" 
                                    Command="{Binding DataContext.EditTagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="10,3"
                                    Background="#F0F0F0"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Delete Button -->
                <DataGridTemplateColumn Header="" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" 
                                    Command="{Binding DataContext.DeleteTagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="10,3"
                                    Background="#DC3545"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>