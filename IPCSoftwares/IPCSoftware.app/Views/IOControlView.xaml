<UserControl x:Class="IPCSoftware.App.Views.IOControlView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="--- Tag Testing Live ---" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Algorithm:" Width="120"/>
                <ComboBox Width="150" ItemsSource="{Binding Algorithms}" 
                          DisplayMemberPath="Name" SelectedValuePath="Id"
                          SelectedValue="{Binding SelectedAlgoNo}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Data Type:" Width="120"/>
                <ComboBox Width="150" ItemsSource="{Binding AvailableDataTypes}" 
                          DisplayMemberPath="Name" SelectedValuePath="Id"
                          SelectedValue="{Binding SelectedDataType}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Address:" Width="120"/>
                <TextBox Width="150" Text="{Binding ModbusAddress}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Data Length:" Width="120"/>
                <TextBox Width="150" Text="{Binding DataLengthValue}" 
                         IsEnabled="{Binding IsDataLengthEditable}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5" 
                        Visibility="{Binding IsBitNoVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Bit No. (0-15):" Width="120"/>
                <ComboBox Width="150" ItemsSource="{Binding AvailableBitNumbers}" 
                          SelectedValue="{Binding SelectedBitNo}"/>
            </StackPanel>

            <Button Content="Save &amp; Start Polling" Margin="0,15,0,0" 
                    Command="{Binding StartPollingCommand}"/>
        </StackPanel>

        <Separator Grid.Row="1" Margin="0,10"/>

        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <TextBlock Text="--- Live Read/Write ---" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Current Value:" Width="120"/>
                <TextBox Width="150" IsReadOnly="True" Text="{Binding CurrentValue, StringFormat='{}{0}'}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Control Output:" Width="120" VerticalAlignment="Center"/>
                <ToggleButton Content="{Binding WriteValue, Converter={StaticResource BoolToStatusColorConverter}}" 
                              IsChecked="{Binding WriteValue}" Width="150"/>
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}" Foreground="Gray" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>