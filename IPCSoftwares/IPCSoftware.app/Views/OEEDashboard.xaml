<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:IPCSoftware.App.Controls"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="IPCSoftware.App.Views.OEEDashboard"
             Background="#1A1A1A">

    <!-- ================= GLOBAL RESOURCES ================= -->
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#272727"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000"
                                      BlurRadius="10"
                                      ShadowDepth="2"
                                      Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ================= SCALE EVERYTHING ================= -->
    <Viewbox Stretch="Uniform">

        <Grid Width="1920" Height="1080">

            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ================= HEADER ================= -->
                <Border Background="#222" Padding="20" CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="AOI Inspection Dashboard"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Bold"/>
                    </Grid>
                </Border>

                <!-- ================= MAIN BODY ================= -->
                <Grid Grid.Row="1" Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ============ LEFT COLUMN ============ -->
                    <StackPanel Grid.Column="0">

                        <!-- Operating Time -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Operating Time"
                                           Foreground="#AAAAAA"
                                           FontSize="24"/>
                                <TextBlock Text="05:42:17"
                                           Foreground="White"
                                           FontSize="42"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <!-- Downtime -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Downtime"
                                           Foreground="#AAAAAA"
                                           FontSize="24"/>
                                <TextBlock Text="00:12:45"
                                           Foreground="White"
                                           FontSize="42"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <!-- Average Cycle Time -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Average Cycle Time"
                                           Foreground="#AAAAAA"
                                           FontSize="24"/>
                                <TextBlock Text="5.8"
                                           Foreground="White"
                                           FontSize="42"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <!-- Trend Chart -->
                        <Border Style="{StaticResource CardStyle}" MinHeight="250" Height="289">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Title -->
                                    <RowDefinition Height="*"/>
                                    <!-- Chart -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- X-axis label -->
                                </Grid.RowDefinitions>

                                <controls:TrendChart 
                                    Title="Cycle Time Trend"
                                    XAxisText="Last 7 Days"
                                    YAxisText="Seconds"
                                    Values="{Binding CycleTrend}"
                                    MinHeight="250"/>


                            </Grid>

                        </Border>


                    </StackPanel>

                    <!-- ============ CENTER COLUMN ============ -->
                    <StackPanel Grid.Column="1" Margin="20,0,20,0">

                        <!-- QR Code -->
                        <Border Style="{StaticResource CardStyle}" Height="369" Width="550">
                            <StackPanel>
                                <TextBlock Text="QR-Code"
                                           Foreground="#DDDDDD"
                                           FontSize="16"/>

                                <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/qrcode.png"
                                       HorizontalAlignment="Center" Height="260" Width="491"/>

                                <TextBlock Text="XS12345F"
                                           HorizontalAlignment="Center"
                                           Foreground="White"
                                           FontSize="22"/>
                            </StackPanel>
                        </Border>

                        <!-- 3x3 Image Grid -->
                        <Border Style="{StaticResource CardStyle}" MinHeight="350" Height="280">
                            <Viewbox Stretch="Uniform" Margin="0,0,0,82" Width="490">
                                <UniformGrid Rows="3" Columns="3" Margin="10">

                                    <!-- 12 repeated camera images -->
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>
                                    <Image Source="pack://application:,,,/IPCSoftware.App;component/Controls/Images/TestCamImage.jpg"/>

                                </UniformGrid>
                            </Viewbox>
                        </Border>

                    </StackPanel>

                    <!-- ============ RIGHT COLUMN ============ -->
                    <StackPanel Grid.Column="2">

                        <!-- Output Summary -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="OUTPUT"
                                               Foreground="White"
                                               FontSize="20"
                                               FontWeight="Bold"/>
                                    <Ellipse Fill="LimeGreen" Width="14" Height="14" Margin="10 0"/>
                                    <TextBlock Text="RUNNING"
                                               Foreground="LimeGreen"
                                               FontWeight="Bold"
                                               FontSize="16"/>
                                </StackPanel>

                                <TextBlock Text="Number of inflow     1200"
                                           Foreground="White"/>
                                <TextBlock Text="Number of OK         1140"
                                           Foreground="White"/>
                                <TextBlock Text="Number of Tossed       35"
                                           Foreground="White"/>
                                <TextBlock Text="Number of NG           25"
                                           Foreground="White"/>

                                <Border Style="{StaticResource CardStyle}" MinHeight="260">
                                    <controls:PieChart 
                                        Items="{Binding OEEParts}"
                                        CenterText="{Binding OEEText}"
                                        MinHeight="260"
                                        MinWidth="260"/>    

                                </Border>

                            </StackPanel>
                        </Border>

                        <!-- Final Measurement Result -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="MEASUREMENT RESULTS"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="18"/>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Height"
                                               Foreground="White"/>
                                    <TextBlock Text="3.45 mm"
                                               Foreground="White"
                                               Margin="10 0"/>
                                    <Ellipse Fill="LimeGreen" Width="14" Height="14" Margin="10 0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Width"
                                               Foreground="White"/>
                                    <TextBlock Text="5.23 mm"
                                               Foreground="White"
                                               Margin="10 0"/>
                                    <Ellipse Fill="Red" Width="14" Height="14" Margin="10 0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" Height="157">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Parameter"
                                        Foreground="White"
                                        FontWeight="Bold"/>
                                    <TextBlock Text="Height" Foreground="White"/>
                                    <TextBlock Text="Width" Foreground="White"/>
                                    <TextBlock Text="Offset" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Value"
                                        Foreground="White"
                                        FontWeight="Bold"/>
                                    <TextBlock Text="3.45 mm" Foreground="White"/>
                                    <TextBlock Text="5.23 mm" Foreground="White"/>
                                    <TextBlock Text="0.02 mm" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Tolerance"
                                        Foreground="White"
                                        FontWeight="Bold"/>
                                    <TextBlock Text="0.10" Foreground="White"/>
                                    <TextBlock Text="0.05" Foreground="White"/>
                                    <TextBlock Text="0.03" Foreground="White"/>
                                </StackPanel>

                            </Grid>
                        </Border>

                    </StackPanel>

                </Grid>

            </Grid>

        </Grid>

    </Viewbox>

</UserControl>
