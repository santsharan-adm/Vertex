<UserControl x:Class="IPCSoftware.App.Views.OEEDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:IPCSoftware.App.Controls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:bh="clr-namespace:IPCSoftware.App.Behaviors"
             xmlns:conv="clr-namespace:IPCSoftware.App.Converters"
             xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
             xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             
             Background="#1A1A1A">



    <UserControl.Resources>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080" Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#222" Padding="20" CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="OEE Dashboard - Testing Mode"
                               Foreground="White" FontSize="32" FontWeight="Bold"/>

                    <TextBlock Grid.Column="1"
                               Text="{Binding CurrentDateTime}" 
                               Foreground="#DDDDDD" FontSize="22" VerticalAlignment="Center"/>
                </Grid>
            </Border>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">

                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Operating Time" Foreground="#AAAAAA" FontSize="22"/>
                            <TextBlock Text="{Binding OperatingTime}" Foreground="White" FontSize="40" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Downtime" Foreground="#AAAAAA" FontSize="22"/>
                            <TextBlock Text="{Binding Downtime}" Foreground="White" FontSize="40" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}" MinHeight="250">
                        <TextBlock Text="OEE Trend Chart Placeholder" Foreground="#666" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                </StackPanel>


                <StackPanel Grid.Column="1">

                    <Border Style="{StaticResource Card}" MinHeight="350">
                        <Grid>
                          

                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50">
                                <TextBlock Text="AVAILABILITY:" Foreground="#AAAAAA"/>
                                <TextBlock Text="{Binding Availability, StringFormat={}{0:P0}}" Foreground="Yellow" FontSize="28" FontWeight="Bold"/>

                                <TextBlock Text="PERFORMANCE:" Foreground="#AAAAAA" Margin="0,10,0,0"/>
                                <TextBlock Text="{Binding Performance, StringFormat={}{0:P0}}" Foreground="#87F287" FontSize="28" FontWeight="Bold"/>

                                <TextBlock Text="QUALITY:" Foreground="#AAAAAA" Margin="0,10,0,0"/>
                                <TextBlock Text="{Binding Quality, StringFormat={}{0:P0}}" Foreground="#FF6A6A" FontSize="28" FontWeight="Bold"/>

                                <TextBlock Text="OVERALL OEE:" Foreground="#AAAAAA" Margin="0,10,0,0"/>
                                <TextBlock Text="{Binding OverallOEE, StringFormat={}{0:P2}}" Foreground="Cyan" FontSize="36" FontWeight="ExtraBold"/>

                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource Card}">
                        <TextBlock Text="{Binding Remarks}" Foreground="White" FontSize="20" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>


                <StackPanel Grid.Column="2">

                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Good Units" Foreground="#87F287" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="{Binding GoodUnits}" Foreground="White" FontSize="40" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Rejected Units" Foreground="#FF6A6A" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="{Binding RejectedUnits}" Foreground="White" FontSize="40" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}" MinHeight="300">
                        <TextBlock Text="Camera/Log Placeholder" Foreground="#666" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                </StackPanel>

            </Grid>
        </Grid>
    </Viewbox>

</UserControl>