<UserControl x:Class="IPCSoftware.App.Views.DeviceListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPCSoftware.App.Views"
             mc:Ignorable="d" 
                  xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
    xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
    helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:DeviceListViewModel}"
      xmlns:converters="clr-namespace:IPCSoftware.App.Converters"
             d:DesignHeight="450" d:DesignWidth="800">  
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Device Configuration" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1" 
                    Content="Add Device" 
                    Command="{Binding AddDeviceCommand}"
                    Padding="15,8"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Devices}"
                  SelectedItem="{Binding SelectedDevice}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  AlternatingRowBackground="#F5F5F5"
                  RowHeight="35"
                  HeadersVisibility="Column">

            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" 
                             Command="{Binding RowDoubleClickCommand}" 
                             CommandParameter="{Binding SelectedDevice}"/>
            </DataGrid.InputBindings>

            <DataGrid.Columns>
                <!-- Device No -->
                <DataGridTextColumn Header="DeviceNo" 
                                    Binding="{Binding DeviceNo}" 
                                    Width="80"/>

                <!-- Name -->
                <DataGridTextColumn Header="Name" 
                                    Binding="{Binding DeviceName}" 
                                    Width="120"/>

                <!-- Type -->
                <DataGridTextColumn Header="Type" 
                                    Binding="{Binding DeviceType}" 
                                    Width="80"/>

                <!-- Make -->
                <DataGridTextColumn Header="Make" 
                                    Binding="{Binding Make}" 
                                    Width="120"/>

                <!-- Model -->
                <DataGridTextColumn Header="Model" 
                                    Binding="{Binding Model}" 
                                    Width="120"/>

                <!-- Description -->
                <DataGridTextColumn Header="Description" 
                                    Binding="{Binding Description}" 
                                    Width="200"/>

                <!-- Remark -->
                <DataGridTextColumn Header="Remark" 
                                    Binding="{Binding Remark}" 
                                    Width="150"/>

                <!-- Config Button -->
                <DataGridTemplateColumn Header="Config" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Config" 
                                    Command="{Binding DataContext.ConfigDeviceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="10,3"
                                    Background="#007ACC"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Edit Button -->
                <DataGridTemplateColumn Header="" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit" 
                                    Command="{Binding DataContext.EditDeviceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="10,3"
                                    Background="#F0F0F0"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Delete Button -->
                <DataGridTemplateColumn Header="" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" 
                                    Command="{Binding DataContext.DeleteDeviceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="10,3"
                                    Background="#DC3545"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
