<UserControl x:Class="IPCSoftware.App.Views.LogConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPCSoftware.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding Title}" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Padding="20"
                Background="White">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Name -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Name" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding LogName, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="25" Padding="5,3"/>
                    </Grid>

                    <!-- Type -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Type" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding LogTypes}"
                                  SelectedItem="{Binding SelectedLogType}"
                                  Height="25"/>
                    </Grid>

                    <!-- Data Folder -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Data Folder" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding DataFolder, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="25" Padding="5,3"/>
                        <Button Grid.Column="2" Content="Browse..."
            Command="{Binding BrowseDataFolderCommand}"
            Width="70" Height="25" Margin="5,0,0,0"/>
                    </Grid>

                    <!-- File Name -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="File Name" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="25" Padding="5,3"/>

                    </Grid>

                    <!-- Log Retention -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Log Retention" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding LogRetentionDays, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="25" Padding="5,3" HorizontalContentAlignment="Center"/>
                        <TextBox Grid.Column="2" Text="{Binding FileSize, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="25" Padding="5,3" HorizontalContentAlignment="Center" Margin="5,0,0,0"/>
                        <TextBlock Grid.Column="3" Text="MB" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        <CheckBox Grid.Column="4" Content="Auto purge After Log retention period" 
                                  IsChecked="{Binding AutoPurge}" 
                                  VerticalAlignment="Center" 
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <!-- Backup Schedule -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Backup Schedule" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding BackupSchedules}"
                                  SelectedItem="{Binding SelectedBackupSchedule}"
                                  Height="25"/>
                    </Grid>

                    <!-- Time -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Time" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding BackupTime, StringFormat='hh\\:mm\\:ss', UpdateSourceTrigger=PropertyChanged}" 
                                 Height="25" Padding="5,3"/>
                    </Grid>

                    <!-- Description -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Description" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="60" Padding="5,3" TextWrapping="Wrap" 
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </Grid>

                    <!-- Remark -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Remark" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Remark, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="60" Padding="5,3" TextWrapping="Wrap" 
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </Grid>

                    <!-- Enabled -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="1" Content="Enabled" IsChecked="{Binding Enabled}"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Save" 
                    Command="{Binding SaveCommand}"
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="3"
                                            Padding="15,5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Width="100" 
                    Height="30"
                    Background="#F0F0F0"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3"
                                            Padding="15,5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
