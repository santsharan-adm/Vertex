
<UserControl x:Class="IPCSoftware.App.Views.OeeDashboardNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:IPCSoftware.App.Views"
             
             xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers" 
             helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:OeeDashboardNewViewModel}"
             mc:Ignorable="d">
    

    <Grid Background="#111">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="OEE Dashboard"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="20"/>

        <!-- Main dashboard layout -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- AVAILABILITY -->
            <Border Grid.Row="0" Grid.Column="0" Padding="15"
                    Background="#222" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Availability (%)" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding Availability}" Foreground="Lime" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- PERFORMANCE -->
            <Border Grid.Row="0" Grid.Column="1" Padding="15"
                    Background="#222" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Performance (%)" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding Performance}" Foreground="Lime" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- QUALITY -->
            <Border Grid.Row="0" Grid.Column="2" Padding="15"
                    Background="#222" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Quality (%)" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding Quality}" Foreground="Lime" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- OEE -->
            <Border Grid.Row="1" Grid.Column="0" Padding="15"
                    Background="#222" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Overall OEE (%)" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding Oee}" Foreground="DeepSkyBlue" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- OPERATING -->
            <Border Grid.Row="1" Grid.Column="1" Padding="15"
                    Background="#222" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Operating Time" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding OperatingTime}" Foreground="White" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- DOWNTIME -->
            <Border Grid.Row="1" Grid.Column="2" Padding="15"
                    Background="#222" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Downtime" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding Downtime}" Foreground="White" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- OK Parts -->
            <Border Grid.Row="2" Grid.Column="0" Padding="15"
                    Background="#222" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="OK Parts" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding OkParts}" Foreground="LightGreen" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- NG Parts -->
            <Border Grid.Row="2" Grid.Column="1" Padding="15"
                    Background="#222" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="NG Parts" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding NgParts}" Foreground="Tomato" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Machine Status -->
            <Border Grid.Row="2" Grid.Column="2" Padding="15"
                    Background="#222" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Machine Status" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding Status}" Foreground="Yellow" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</UserControl>
