<UserControl x:Class="IPCSoftware.App.Views.DeviceInterfaceConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPCSoftware.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920"
             Background="#F3F3F3" FontFamily="Segoe UI">

    <UserControl.Resources>
        <!-- HMI TOUCH STYLES -->
        <Style x:Key="HmiLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="HmiTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Read Only specific style (Grey background) -->
        <Style x:Key="HmiReadOnlyTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource HmiTextBoxStyle}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#888888"/>
        </Style>

        <Style x:Key="HmiComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="HmiCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="2.0" ScaleY="2.0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- MAIN SCALING CONTAINER -->
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Split Content -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <TextBlock Grid.Row="0" 
                       Text="{Binding Title}" 
                       FontSize="48" 
                       FontWeight="Bold"
                       Foreground="#333333"
                       Margin="40,30,0,20"/>

            <!-- 2. CONTENT AREA (2 PANES) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly" Margin="40,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Left: Interface Settings -->
                        <ColumnDefinition Width="60"/>
                        <!-- Gutter -->
                        <ColumnDefinition Width="*"/>
                        <!-- Right: Details -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT PANEL: INTERFACE SETTINGS -->
                    <StackPanel Grid.Column="0">
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Interface Configuration" FontSize="38" FontWeight="Bold"  Margin="0,0,0,30"/>

                                <!-- Device Info (Read Only) -->
                                <Grid Margin="0,0,0,30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Device No" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding DeviceNo, Mode=OneWay}" 
                                                 Style="{StaticResource HmiReadOnlyTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Device Name" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding DeviceName, Mode=OneWay}" 
                                                 Style="{StaticResource HmiReadOnlyTextBoxStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Unit No & Interface Name -->
                                <Grid Margin="0,0,0,30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Unit No" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding UnitNo, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Interface Name" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Com Protocol -->
                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Communication Protocol" Style="{StaticResource HmiLabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding ComProtocols}"
                                              SelectedItem="{Binding SelectedComProtocol}"
                                              Style="{StaticResource HmiComboBoxStyle}"/>
                                </StackPanel>

                                <!-- IP & Port -->
                                <Grid Margin="0,0,0,30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="IP Address" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding IPAddress, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Port No" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding PortNo, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Gateway -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Gateway" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Gateway, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"/>
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- RIGHT PANEL: DETAILS -->
                    <StackPanel Grid.Column="2">
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Additional Details" FontSize="38" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,30"/>

                                <!-- Description -->
                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Description" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"
                                             Height="120" TextWrapping="Wrap" AcceptsReturn="True" 
                                             VerticalContentAlignment="Top" Padding="15"/>
                                </StackPanel>

                                <!-- Remark -->
                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Remark" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Remark, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"
                                             Height="120" TextWrapping="Wrap" AcceptsReturn="True" 
                                             VerticalContentAlignment="Top" Padding="15"/>
                                </StackPanel>

                                <!-- Enabled -->
                                <CheckBox Content="Interface Enabled" 
                                          IsChecked="{Binding Enabled}"
                                          Style="{StaticResource HmiCheckBoxStyle}"
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- 3. FOOTER ACTIONS -->
            <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="30">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            Width="200" Height="70"
                            FontSize="24" FontWeight="SemiBold"
                            Background="#F5F5F5" Foreground="#555555"
                            BorderBrush="#CCCCCC" BorderThickness="2"
                            Margin="0,0,30,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Save Interface" 
                            Command="{Binding SaveCommand}"
                            Width="260" Height="70"
                            FontSize="24" FontWeight="Bold"
                            Background="#007ACC" Foreground="White"
                            BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>