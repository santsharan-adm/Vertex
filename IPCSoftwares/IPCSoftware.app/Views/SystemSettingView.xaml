<UserControl x:Class="IPCSoftware.App.Views.SystemSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F5F5F5">
    

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===================== BUTTON + TIME SECTION ===================== -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SYNC BUTTON -->
            <Button Content="Sync"
                    Command="{Binding SyncCommand}"
                    Width="120"
                    Height="40"
                    x:Name="SyncBtn">
                <Button.Style>
                    <Style TargetType="Button">

                        <Setter Property="Background" Value="Yellow"/>

                        <Style.Triggers>

                            <!-- Blue Blinking State -->
                            <DataTrigger Binding="{Binding SyncState}" Value="Syncing">
                                <Setter Property="Background" Value="Blue"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                            From="Blue" To="LightBlue" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>

                            <!-- Green = Synced -->
                            <DataTrigger Binding="{Binding SyncState}" Value="Synced">
                                <Setter Property="Background" Value="Green"/>
                            </DataTrigger>

                            <!-- Red = Error -->
                            <DataTrigger Binding="{Binding SyncState}" Value="Error">
                                <Setter Property="Background" Value="Red"/>
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- TIME PANEL -->
            <StackPanel Grid.Column="1" Margin="30 0 0 0">

                <!-- PLC TIME -->
                <Border BorderBrush="#444" BorderThickness="1" Padding="15" CornerRadius="8" Margin="0 10">
                    <StackPanel>
                        <TextBlock Text="PLC"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0 0 0 5"/>
                        <TextBlock Text="{Binding PlcDate}" FontSize="16"/>
                        <TextBlock Text="{Binding PlcTime}" FontSize="16"/>
                    </StackPanel>
                </Border>

                <!-- IPC TIME -->
                <Border BorderBrush="#444" BorderThickness="1" Padding="15" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="IPC"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0 0 0 5"/>
                        <TextBlock Text="{Binding IpcDate}" FontSize="16"/>
                        <TextBlock Text="{Binding IpcTime}" FontSize="16"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>

        <!-- ===================== AUDIT TRAIL ===================== -->
        <GroupBox Header="Audit Trail" Grid.Row="2" Margin="0 20 0 0">
            <ListView ItemsSource="{Binding AuditLogs}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Timestamp" Width="180" DisplayMemberBinding="{Binding Time}"/>
                        <GridViewColumn Header="Event" Width="400" DisplayMemberBinding="{Binding Message}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

    </Grid>
</UserControl>
