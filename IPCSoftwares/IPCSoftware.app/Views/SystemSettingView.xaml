<UserControl x:Class="IPCSoftware.App.Views.SystemSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===================== TOP SECTION ===================== -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ================= LEFT SIDE : PLC + IPC ================= -->
            <StackPanel HorizontalAlignment="Center"
                        Grid.Column="0">

                <!-- PLC PANEL -->
                <Border BorderBrush="#444"
                        BorderThickness="1"
                        Padding="20"
                        CornerRadius="10"
                        Margin="0 0 0 20"
                        Height="100"
                        Width="450">

                    <StackPanel>
                        <TextBlock Text="PLC"
                                   FontWeight="Bold"
                                   FontSize="50"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding PlcDate}" FontSize="16"/>
                        <TextBlock Text="{Binding PlcTime}" FontSize="16"/>
                    </StackPanel>
                </Border>

                <!-- IPC PANEL -->
                <Border BorderBrush="#444"
                        BorderThickness="1"
                        Padding="20"
                        CornerRadius="10"
                        Margin="0 0 0 20"
                        Height="100"
                        Width="450">

                    <StackPanel>
                        <TextBlock Text="IPC"
                                   FontWeight="Bold"
                                   FontSize="50"
                                   Margin="0 0 0 8"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding IpcDate}" FontSize="16"/>
                        <TextBlock Text="{Binding IpcTime}" FontSize="16"/>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!-- ================= RIGHT SIDE : SYNC BUTTON ================= -->
            <Button Grid.Column="1"
                    x:Name="SyncBtn"
                    Content="Sync"
                    Command="{Binding SyncCommand}"
                    Width="160"
                    Height="80"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">

                <!-- ================= BUTTON TEMPLATE ================= -->
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>

                            <Border x:Name="border"
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="Black">

                                <!-- ✅ SAFE SHADOW -->
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                                      ShadowDepth="3"
                                                      Opacity="0.5"/>
                                </Border.Effect>

                                <!-- ✅ DEFAULT BACKGROUND -->
                                <Border.Background>
                                    <SolidColorBrush x:Name="bgBrush" Color="#2ECC71"/>
                                </Border.Background>

                                <Grid>
                                    <!-- GLASS SHINE -->
                                    <Rectangle Height="20"
                                               VerticalAlignment="Top"
                                               RadiusX="8"
                                               RadiusY="8">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#66FFFFFF" Offset="0"/>
                                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <!-- TEXT -->
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                        </Grid>

                        <!-- ================= TEMPLATE TRIGGERS ================= -->
                        <ControlTemplate.Triggers>

                            <!-- PRESS EFFECT -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- 🔵 SYNCING = BLINK BLUE -->
                            <DataTrigger Binding="{Binding SyncState}"
                                         Value="Syncing">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard x:Name="BlinkStoryboard">
                                        <Storyboard RepeatBehavior="Forever"
                                                    AutoReverse="True">
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                From="Blue"
                                                To="LightBlue"
                                                Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>

                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="Blue"/>
                            </DataTrigger>

                            <!-- ✅ SYNCED = GREEN -->
                            <DataTrigger Binding="{Binding SyncState}"
                                         Value="Synced">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="Green"/>
                            </DataTrigger>

                            <!-- 🔴 ERROR = RED -->
                            <DataTrigger Binding="{Binding SyncState}"
                                         Value="Error">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="Red"/>
                            </DataTrigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Button.Template>

            </Button>

        </Grid>

        <!-- ===================== AUDIT TRAIL ===================== -->
        <GroupBox Header="Audit Trail"
                  Grid.Row="1"
                  Margin="0 30 0 0">

            <ListView ItemsSource="{Binding AuditLogs}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Timestamp"
                                        Width="200"
                                        DisplayMemberBinding="{Binding Time}"/>
                        <GridViewColumn Header="Event"
                                        Width="500"
                                        DisplayMemberBinding="{Binding Message}"/>
                    </GridView>
                </ListView.View>
            </ListView>

        </GroupBox>

    </Grid>
</UserControl>
