<UserControl x:Class="IPCSoftware.App.Views.IPCLogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPCSoftware.App.Views"
             xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:IPCLogsViewModel />
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Folder List -->
        <ListBox ItemsSource="{Binding Folders}"
                 SelectedItem="{Binding SelectedFolder}"
                 DisplayMemberPath="FolderName"
                 Margin="0,0,10,0"
                 Grid.Column="0" SelectionChanged="ListBox_SelectionChanged"/>

        <!-- CSV Files -->
        <ListBox ItemsSource="{Binding CsvFiles}"
                 SelectedItem="{Binding SelectedFile}"
                 Margin="0,0,10,0"
                 Grid.Column="1" />

        <!-- CSV Data -->
        <DataGrid ItemsSource="{Binding CsvData}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Grid.Column="2" />
    </Grid>
</UserControl>
