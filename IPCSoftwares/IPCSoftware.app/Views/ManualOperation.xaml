<UserControl x:Class="IPCSoftware.App.Views.ManualOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
             xmlns:conv="clr-namespace:IPCSoftware.App.Converters"
             helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:ManualOperationViewModel}"
             Background="#F0F2F5">

    <UserControl.Resources>
        <conv:EnumToSymbolConverter x:Key="EnumToSymbolConverter"/>
        <conv:EqualityConverter x:Key="EqualityConverter"/>

        <!-- Styles -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <!-- Increased -->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Button Style (Taller, Squarer) -->
        <Style x:Key="ManualModeButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Height" Value="150"/>
            <!-- Increased Height for Square look -->
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="28"/>
            <!-- Increased Font Size -->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="12" Background="#E8E8E8" BorderBrush="#CCC" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0F9D58"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsBlinking}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFC107"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Name="BlinkAnim">
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="Opacity" From="1.0" To="0.4" Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="BlinkAnim"/>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StretchItemStyle" TargetType="ContentPresenter">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>

        <DataTemplate x:Key="SharedButtonTemplate">
            <Button Style="{StaticResource ManualModeButtonStyle}"
                    Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding Mode}">
                <TextBlock Text="{Binding Mode, Converter={StaticResource EnumToSymbolConverter}}"
                           FontSize="32" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
        </DataTemplate>
    </UserControl.Resources>

    <!-- Full Screen Grid (No Viewbox) -->
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content Area -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Manual Operation Panel" FontSize="46" FontWeight="Bold" Foreground="#444" Margin="10,0,0,30"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <!-- Left Column (Tray, Cyl, Conveyor, Jog) -->
                <ColumnDefinition Width="*"/>
                <!-- Right Column (Positions) -->
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN -->
            <Grid Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Row 1: Tray, Cyl, Conveyor -->
                    <RowDefinition Height="*"/>
                    <!-- Row 2: Jog (X & Y) -->
                </Grid.RowDefinitions>

                <!-- Top Group: Tray, Cyl, Conveyor -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <!-- Conveyor needs more space -->
                    </Grid.ColumnDefinitions>

                    <!-- Tray Lift -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Tray Lift" Style="{StaticResource SectionHeaderStyle}"/>
                            <ItemsControl ItemsSource="{Binding TrayModes}" ItemTemplate="{StaticResource SharedButtonTemplate}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Positioning Cylinder -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Pos. Cylinder" Style="{StaticResource SectionHeaderStyle}"/>
                            <ItemsControl ItemsSource="{Binding CylinderModes}" ItemTemplate="{StaticResource SharedButtonTemplate}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Conveyor -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Transport Conveyor" Style="{StaticResource SectionHeaderStyle}"/>
                            <ItemsControl ItemsSource="{Binding ConveyorModes}" ItemTemplate="{StaticResource SharedButtonTemplate}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Bottom Group: Jog Controls -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- X Axis -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Manual X-Axis Jog" Style="{StaticResource SectionHeaderStyle}"/>
                            <ItemsControl ItemsSource="{Binding XAxisModes}" ItemTemplate="{StaticResource SharedButtonTemplate}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" Rows="2"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </DockPanel>
                    </Border>

                    <!-- Y Axis -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Manual Y-Axis Jog" Style="{StaticResource SectionHeaderStyle}"/>
                            <ItemsControl ItemsSource="{Binding YAxisModes}" ItemTemplate="{StaticResource SharedButtonTemplate}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" Rows="2"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </DockPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- RIGHT COLUMN: Positions -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="15,10,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Move to Position" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Home Button (Large) -->
                    <Button Grid.Row="1" Margin="20,0,20,20" Content="HOME POS" FontWeight="Bold" FontSize="36" Height="120"
                            Style="{StaticResource ManualModeButtonStyle}" DataContext="{Binding HomePositionMode}"
                            Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding Mode}"/>

                    <!-- Grid 1-12 -->
                    <ItemsControl Grid.Row="2" ItemsSource="{Binding GridPositionModes}" ItemTemplate="{StaticResource SharedButtonTemplate}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                        <ItemsControl.ItemsPanel>
                            <!-- 3 Columns for bigger buttons -->
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>