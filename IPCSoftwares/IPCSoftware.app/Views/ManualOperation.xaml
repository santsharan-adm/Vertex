<UserControl x:Class="IPCSoftware.App.Views.ManualOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
             xmlns:conv="clr-namespace:IPCSoftware.App.Converters"
             helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:ManualOperationViewModel}"
             Background="#F0F2F5" >

    <UserControl.Resources>
        <!-- Converters -->
        <conv:EqualityConverter x:Key="EqualityConverter"/>
        <conv:EnumToSymbolConverter x:Key="EnumToSymbolConverter"/>
        <conv:GroupVisibilityConverter x:Key="GroupVisibilityConverter"/>

        <!-- ================= STYLES ================= -->

        <!-- 1. Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 2. Section Header Style -->
        <Style x:Key="SectionHeaderStyle"  TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="5,0,0,10"/>
        </Style>

        <Style x:Key="ManualModeButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#E8E8E8"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1">
                            <!-- Removed the Grid/Indicator logic, just content now -->
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="10"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                    <Condition Value="False">
                                        <Condition.Binding>
                                            <MultiBinding Converter="{StaticResource EqualityConverter}">
                                                <Binding Path="DataContext.SelectedGroupButtons" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                <Binding Path="Group"/>
                                                <Binding Path="Mode"/>
                                            </MultiBinding>
                                        </Condition.Binding>
                                    </Condition>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="#D6D6D6"/>
                            </MultiDataTrigger>

                            <!-- Pressed Effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Selected State (Green) -->
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource EqualityConverter}">
                                        <Binding Path="DataContext.SelectedGroupButtons" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                        <Binding Path="Group"/>
                                        <Binding Path="Mode"/>
                                    </MultiBinding>
                                </DataTrigger.Binding>

                                <Setter TargetName="border" Property="Background" Value="#0F9D58"/>
                                <Setter Property="Foreground" Value="White"/>
                                <!-- Removed Indicator Setter -->
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#0F9D58" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Standard ItemContainerStyle for Stretching Buttons -->
        <Style x:Key="StretchItemStyle" TargetType="ContentPresenter">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
    </UserControl.Resources>

    <!-- ========== MAIN LAYOUT ========== -->
    <Viewbox Stretch="Uniform">
        <Grid  Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <!-- Left Side (Machine) -->
                <ColumnDefinition Width="1.5*"/>
                <!-- Right Side (Position) -->
            </Grid.ColumnDefinitions>

            <!-- ================= LEFT PANEL ================= -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.7*"/>
                    <!-- Row 1: Tray & Cylinder -->
                    <RowDefinition Height="1*"/>
                    <!-- Row 2: Conveyor -->
                    <RowDefinition Height="1*"/>
                    <!-- Row 3: X Axis -->
                
                    <!-- Row 4: Y Axis -->
                </Grid.RowDefinitions>

                <!-- ROW 1: Tray Lift & Positioning Cylinder -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tray Lift -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Tray Lift" Style="{StaticResource SectionHeaderStyle}"/>

                            <ItemsControl Grid.Row="1" ItemsSource="{Binding TrayModes}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button FontSize="50" Style="{StaticResource ManualModeButtonStyle}"
                                                Content="{Binding Mode, Converter={StaticResource EnumToSymbolConverter}}"
                                                Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding Mode}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>

                    <!-- Positioning Cylinder -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Pos. Cylinder" Style="{StaticResource SectionHeaderStyle}"/>

                            <ItemsControl Grid.Row="1" ItemsSource="{Binding CylinderModes}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button FontSize="50" Style="{StaticResource ManualModeButtonStyle}"
                                                Content="{Binding Mode, Converter={StaticResource EnumToSymbolConverter}}"
                                                Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding Mode}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>

               
                <!-- ROW 3: Manual X-Axis -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Manual X-Axis" Style="{StaticResource SectionHeaderStyle}"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding XAxisModes}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button FontSize="40" Style="{StaticResource ManualModeButtonStyle}"
                                            Content="{Binding Mode, Converter={StaticResource EnumToSymbolConverter}}"
                                            Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding Mode}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- ROW 4: Manual Y-Axis -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Manual Y-Axis" Style="{StaticResource SectionHeaderStyle}"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding YAxisModes}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button FontSize=" 40" Style="{StaticResource ManualModeButtonStyle}"
                                            Content="{Binding Mode, Converter={StaticResource EnumToSymbolConverter}}"
                                            Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding Mode}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto" MinHeight="250"/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Move to Position" Style="{StaticResource SectionHeaderStyle}"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding PositionModes}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <!-- Grid-style layout for positions -->
                                    <UniformGrid Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource ManualModeButtonStyle}" FontSize="80"
                             Content="{Binding Mode, Converter={StaticResource EnumToSymbolConverter}}"
                             Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             CommandParameter="{Binding Mode}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- ROW 2: Transport Conveyor -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Transport Conveyor"  Style="{StaticResource SectionHeaderStyle}"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding ConveyorModes}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button FontSize ="40" Style="{StaticResource ManualModeButtonStyle}"
                             Content="{Binding Mode, Converter={StaticResource EnumToSymbolConverter}}"
                             Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             CommandParameter="{Binding Mode}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>


            </Grid>
            <!-- ================= RIGHT PANEL (Move to Position) ================= -->
           
        </Grid>
    </Viewbox>
</UserControl>