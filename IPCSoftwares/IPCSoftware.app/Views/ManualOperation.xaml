<UserControl x:Class="IPCSoftware.App.Views.ManualOperation"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
             xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"

 helpers:ViewModelLocator.AutoWireViewModel="{x:Type vm:ManualOperationViewModel}"
xmlns:conv="clr-namespace:IPCSoftware.App.Converters" xmlns:sys="clr-namespace:System;assembly=netstandard">

    <!--<UserControl.DataContext>
        <vm:ManualOperationViewModel/>
    </UserControl.DataContext>-->

    <UserControl.Resources>
        <conv:EqualityConverter x:Key="EqualityConverter"/>
        <conv:EnumToSpacedStringConverter x:Key="EnumToSpacedStringConverter"/>

        <!-- LOCAL Styles and custom UI sizes -->
        <sys:Double x:Key="ManualButtonFontSize">21</sys:Double>
        <sys:Double x:Key="ManualButtonMinWidth">120</sys:Double>
        <sys:Double x:Key="ManualButtonMinHeight">120</sys:Double>

        <Style x:Key="ManualModeButtonStyle"
           TargetType="Button"
           BasedOn="{StaticResource TouchButtonBaseStyle}">
            <Setter Property="FontSize" Value="{StaticResource ManualButtonFontSize}"/>
            <Setter Property="MinWidth" Value="{StaticResource ManualButtonMinWidth}"/>
            <Setter Property="MinHeight" Value="{StaticResource ManualButtonMinHeight}"/>

            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource EqualityConverter}">
                            <Binding Path="DataContext.SelectedGroupButtons"
                                 RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                            <Binding Path="Group"/>
                            <Binding Path="Mode"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Background" Value="#0F9D58"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

        
   
    <Grid>
        <Grid.Resources>
            <CollectionViewSource x:Key="GroupedModes" Source="{Binding Modes}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="Group"/>
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
        </Grid.Resources>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Source={StaticResource GroupedModes}}">
                <ItemsControl.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ItemsControl.GroupStyle>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource ManualModeButtonStyle}"
                        Content="{Binding Mode, Converter={StaticResource EnumToSpacedStringConverter}}"
                        Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding Mode}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
 
</UserControl>




