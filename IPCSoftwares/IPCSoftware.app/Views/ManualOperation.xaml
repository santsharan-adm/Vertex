                                                <DataTrigger Binding="{Binding IsConvLowActive}" Value="True">
                                                    <Setter Property="Background" Value="#0F9D58"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding ConvSpeedCommand}" CommandParameter="ConvLow|True"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                            <i:InvokeCommandAction Command="{Binding ConvSpeedCommand}" CommandParameter="ConvLow|True"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="LostMouseCapture">
                                            <i:InvokeCommandAction Command="{Binding ConvSpeedCommand}" CommandParameter="ConvLow|False"/>
                                        </i:EventTrigger>
