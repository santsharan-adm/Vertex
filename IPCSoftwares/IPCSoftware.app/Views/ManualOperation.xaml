                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <Button Content="▶ X JOG +" HorizontalAlignment="Right">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource JogButtonStyle}">
                                        <!--<Setter Property="Background" Value="Coral"/>-->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsJogXPlusActive}" Value="True">
                                                <Setter Property="Background" Value="#0F9D58"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="XPlus|True"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="XPlus|True"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="LostMouseCapture">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="XPlus|False"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="PreviewTouchDown">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="XPlus|True"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="LostTouchCapture">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="XPlus|False"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="PreviewTouchUp">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="XPlus|False"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </DockPanel>
                    </Border>

                    <!-- Y Axis -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Manual Y-Axis Jog" Style="{StaticResource SectionHeaderStyle}"/>

                            <Button Content="◀ Y JOG -" HorizontalAlignment="Right">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource JogButtonStyle}">
                                        <!--<Setter Property="Background" Value="LightGreen"/>-->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsJogYMinusActive}" Value="True">
                                                <Setter Property="Background" Value="#0F9D58"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YMinus|True"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YMinus|True"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="LostMouseCapture">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YMinus|False"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="PreviewTouchDown">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YMinus|True"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="LostTouchCapture">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YMinus|False"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="PreviewTouchUp">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YMinus|False"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <Button Content="▶ Y JOG +" HorizontalAlignment="Right">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource JogButtonStyle}">
                                        <!--<Setter Property="Background" Value="LightGreen"/>-->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsJogYPlusActive}" Value="True">
                                                <Setter Property="Background" Value="#0F9D58"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YPlus|True"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YPlus|True"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="LostMouseCapture">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YPlus|False"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="PreviewTouchDown">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YPlus|True"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="LostTouchCapture">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YPlus|False"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="PreviewTouchUp">
                                        <i:InvokeCommandAction Command="{Binding JogCommand}" CommandParameter="YPlus|False"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </DockPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- RIGHT COLUMN: Positions -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="15,10,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Move to Position" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Home Button (Large) -->
                    <Button Grid.Row="1" Margin="10,0,10,20" Content="X-Y ORIGIN" FontWeight="Bold" FontSize="36" Height="120"
                             Command="{Binding ConfirmYCoordsCommand}"
                            
                            Style="{StaticResource ManualModeButtonStyle}" 
                          
                          />
                    
                    
                    <!-- Home Button (Large) -->
                    <Button Grid.Row="1" Grid.Column="1" Margin="10,0,10,20" Content="Position 0" FontWeight="Bold" FontSize="36" Height="120"
                            Style="{StaticResource ManualModeButtonStyle}" DataContext="{Binding HomePositionMode}"
                            Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding Mode}"/>

                    <!-- Grid 1-12 -->
                    <ItemsControl Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding GridPositionModes}"  ItemTemplate="{StaticResource SharedButtonTemplate}" ItemContainerStyle="{StaticResource StretchItemStyle}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>