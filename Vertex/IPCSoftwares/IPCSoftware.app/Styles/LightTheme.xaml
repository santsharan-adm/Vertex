<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ======================
         BACKGROUND COLORS
         ====================== -->

    <!-- Main page/window background (light gray) -->
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="#D8D8D8"/>

    <!-- Background for cards, panels, or content containers -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>

    <!-- Border color for UI elements (soft light gray) -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E4E6EB"/>


    <!-- ======================
         TEXT COLORS
         ====================== -->

    <!-- Primary text color (near-black) for main content -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1C1E21"/>

    <!-- Secondary text color (medium gray) for labels or subtitles -->
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#65676B"/>
    
    <!-- Table header or caption text color -->
    <SolidColorBrush x:Key="TableHeaderBrush" Color="#999999"/>

    <!-- ======================
         STATUS / FEEDBACK COLORS
         ====================== -->

    <!-- Green: Indicates success or active states -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#218838"/>

    <!-- Red: Indicates errors, failures, or alerts -->
    <SolidColorBrush x:Key="DangerBrush" Color="#C82333"/>

    <!-- Blue: Information or neutral highlights -->
    <SolidColorBrush x:Key="InfoBrush" Color="#0069D9"/>

    <!-- Yellow: Warnings or caution messages -->

    <SolidColorBrush x:Key="WarningBrush" Color="#E0A800"/>

</ResourceDictionary>