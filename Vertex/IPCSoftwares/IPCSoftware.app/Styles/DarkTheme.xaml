<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ======================
         BACKGROUND COLORS
         ====================== -->
    
    <!-- Main window/page background color (dark gray) -->
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="#1A1A1A"/>
    
    <!-- Background for cards, panels, or content sections -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#272727"/>

    <!-- Border color used around UI elements (subtle contrast) -->
    <SolidColorBrush x:Key="BorderBrush" Color="#333333"/>

    <!-- ======================
         TEXT COLORS
         ====================== -->


    <!-- Primary text color (white) used for main content -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>

    <!-- Secondary text color (light gray) used for labels or less prominent text -->
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#AAAAAA"/>

    <!-- Table header color (medium gray) used for grid or list headers -->
    <SolidColorBrush x:Key="TableHeaderBrush" Color="#888888"/>


    <!-- ======================
         STATUS / FEEDBACK COLORS
         ====================== -->

    <!-- Green: Success or active state indicators -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>

    <!-- Red: Error, failure, or danger alerts -->
    <SolidColorBrush x:Key="DangerBrush" Color="#DC3545"/>

    <!-- Blue: Info messages or neutral highlights -->
    <SolidColorBrush x:Key="InfoBrush" Color="#007ACC"/>

    <!-- Yellow: Warning or caution messages -->
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>

</ResourceDictionary>