<Window x:Class="IPCSoftware.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:helpers="clr-namespace:IPCSoftware.App.Helpers"
        xmlns:vm="clr-namespace:IPCSoftware.App.ViewModels"
        mc:Ignorable="d"
        Title="IPC HMI Software" 
        Height="1080" Width="1920"
        WindowState="Maximized" 
        WindowStyle="None"
        Background="#F3F3F3" 
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBoolConverter"/>

        <!-- Window Control Button Style (Minimize, Close) -->
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Sidebar Navigation Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="90"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#EEEEEE"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="30,0"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E5FA8"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- 
        Global Viewbox:
        UPDATED: Set base resolution to 1920x1080.
        The Viewbox will scale this DOWN for smaller screens (maintaining proportions),
        instead of scaling a small grid UP (which made buttons huge).
    -->
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header (Height defined by child Grid) -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
                <RowDefinition Height="60"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ================= HEADER (Row 0) ================= -->
            <Grid Grid.Row="0" Height="110" Panel.ZIndex="100">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1E3A8A" Offset="0"/>
                        <GradientStop Color="#1E4FA8" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.3" BlurRadius="10"/>
                </Grid.Effect>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Ribbon Host -->
                <ContentControl x:Name="RibbonHost" Grid.Column="0" VerticalAlignment="Stretch"/>

                <!-- Window Controls (Min/Close) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Button Content="—" 
                            Command="{Binding MinimizeAppCommand}" 
                            Style="{StaticResource WindowControlButtonStyle}" 
                            Height="50" Width="60"
                            ToolTip="Minimize"/>

                    <Button Command="{Binding CloseAppCommand}" 
                            ToolTip="Close Application"
                            Width="80" Height="50"
                            Background="Transparent" 
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}">
                                    <Path x:Name="icon"
                                          Data="M 10,10 L 30,30 M 30,10 L 10,30"
                                          Stroke="White"
                                          StrokeThickness="3"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                        <Setter TargetName="icon" Property="Stroke" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#B90D1C"/>
                                        <Setter TargetName="icon" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- ================= BODY (Row 1) ================= -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Main Content Area -->
                <ContentControl x:Name="MainContent" Grid.Column="1" Margin="0"/>

                <!-- Overlay for Sidebar (Click to close) -->
                <Border Grid.Column="1" Background="#99000000" Panel.ZIndex="9">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsSidebarOpen}" Value="True"/>
                                        <Condition Binding="{Binding IsSidebarDocked}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding CloseSidebarCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Border>

                <!-- Sidebar Menu -->
                <Border x:Name="SideMenu"
                        Width="310"
                        Background="#1E4FA8"
                        BorderBrush="#1E4FA4"
                        BorderThickness="0,0,1,0"
                        Panel.ZIndex="10">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Grid.Column" Value="0"/>
                            <Setter Property="Grid.ColumnSpan" Value="2"/>
                            <Style.Triggers>
                                <!-- Animation: Slide In/Out -->
                                <DataTrigger Binding="{Binding IsSidebarOpen}" Value="False">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform X="-360"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsSidebarOpen}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                                <!-- Docked State -->
                                <DataTrigger Binding="{Binding IsSidebarDocked}" Value="True">
                                    <Setter Property="Grid.Column" Value="0"/>
                                    <Setter Property="Grid.ColumnSpan" Value="1"/>
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="120"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>

                        <!-- Sidebar Header -->
                        <Border Grid.Row="0" BorderBrush="#333" BorderThickness="0,0,0,1" Margin="10,0">
                            <Grid>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="MENU" Foreground="White" FontSize="30" FontWeight="Bold"/>
                                </StackPanel>

                                <!-- Dock/Undock Toggle -->
                                <ToggleButton IsChecked="{Binding IsSidebarDocked}"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Top"
                                              Margin="0,10,0,0"
                                              Width="40" Height="40"
                                              ToolTip="Dock Sidebar">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border" Background="Transparent" CornerRadius="5">
                                                <TextBlock x:Name="icon" Text="📌" FontSize="20" Foreground="White" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                    <Setter TargetName="icon" Property="Foreground" Value="#1E4FA8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </Grid>
                        </Border>

                        <!-- Navigation Items -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,20,0,0">
                            <ItemsControl ItemsSource="{Binding SidebarItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" Style="{StaticResource SidebarButtonStyle}"
                                                Command="{Binding DataContext.SidebarItemClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- ================= FOOTER (Row 2) ================= -->
            <Border Grid.Row="2" Background="#1E4FA8" Panel.ZIndex="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="20,0,0,0" Text="{Binding AppVersion}" Foreground="#AAAAAA" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SystemTime}" Typography.NumeralAlignment="Tabular" Foreground="#AAAAAA" Margin="0,0,20,0" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>

        </Grid>
    </Viewbox>
</Window>