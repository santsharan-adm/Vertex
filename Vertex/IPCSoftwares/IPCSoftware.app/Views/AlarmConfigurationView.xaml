<UserControl x:Class="IPCSoftware.App.Views.AlarmConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPCSoftware.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920"
             Background="#F3F3F3" >

    <UserControl.Resources>
        <Style x:Key="HmiLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="HmiTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="70"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="HmiComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="{Binding Title}" 
                       FontSize="48" 
                       FontWeight="Bold"
                       Foreground="#333333"
                       Margin="40,30,0,20"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly" Margin="40,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>   <ColumnDefinition Width="60"/>  <ColumnDefinition Width="*"/>   </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Alarm Definition" FontSize="32" FontWeight="Bold"  Margin="0,0,0,30"/>

                                <Grid Margin="0,0,0,30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Alarm No" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding AlarmNo, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Alarm Name" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding AlarmName, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Tag No" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding TagNo, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Name" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Alarm Bit" Style="{StaticResource HmiLabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding AlarmBits}"
                                              Text="{Binding AlarmBit}"
                                              IsEditable="True"
                                              Style="{StaticResource HmiComboBoxStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Display Properties" FontSize="32" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,30"/>

                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Severity" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Severity, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Alarm Text" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding AlarmText, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"
                                             Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                                             VerticalContentAlignment="Top" Padding="15"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Description" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"
                                             Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                                             VerticalContentAlignment="Top" Padding="15"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Remark" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Remark, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"
                                             Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                                             VerticalContentAlignment="Top" Padding="15"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="30">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            Width="200" Height="70"
                            FontSize="24" FontWeight="SemiBold"
                            Background="#F5F5F5" Foreground="#555555"
                            BorderBrush="#CCCCCC" BorderThickness="2"
                            Margin="0,0,30,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Save Alarm" 
                            Command="{Binding SaveCommand}"
                            Width="250" Height="70"
                            FontSize="24" FontWeight="Bold"
                            Background="#007ACC" Foreground="White"
                            BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>