<UserControl x:Class="IPCSoftware.App.Views.PLCTagConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPCSoftware.App.Views" 
     
              xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920"
             Background="#F3F3F3" >

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <sys:Double x:Key="LabelFontSize">26</sys:Double>
        <Thickness x:Key="LabelMargin">0,0,0,10</Thickness>
        <!-- HMI TOUCH STYLES -->
       

        <Style x:Key="HmiTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="70"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="HmiCheckBoxStyle" TargetType="CheckBox">
           
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="3.0" ScaleY="3.0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HmiComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- MAIN SCALING CONTAINER -->
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="*"/>
                <!-- Split Content -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER -->
            <TextBlock Grid.Row="0" 
                       Text="{Binding Title}" 
                       FontSize="48" 
                       FontWeight="Bold"
                       Foreground="#333333"
                       Margin="40,30,0,20"/>

            <!-- 2. CONTENT AREA (2 PANES) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly" Margin="40,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Left: Tag Details -->
                        <ColumnDefinition Width="60"/>
                        <!-- Gutter -->
                        <ColumnDefinition Width="*"/>
                        <!-- Right: PLC/Tech Details -->
                    </Grid.ColumnDefinitions>

                    <!-- LEFT PANEL: TAG IDENTIFICATION -->
                    <StackPanel Grid.Column="0">
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Tag Identification" FontSize="32" FontWeight="Bold"  Margin="0,0,0,30"/>

                                <!-- Tag No -->
                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Tag No"     FontSize="{StaticResource LabelFontSize}"
                                        Margin="{StaticResource LabelMargin}" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding TagNo, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Name -->
                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Name" FontSize="{StaticResource LabelFontSize}"
           Margin="{StaticResource LabelMargin}" Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"/>
                                </StackPanel>

                                <!-- Description -->
                                <StackPanel Margin="0,0,0,30">
                                    <TextBlock Text="Description" FontSize="{StaticResource LabelFontSize}"
                                               Margin="{StaticResource LabelMargin}" 
                                               Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"
                                             Height="120" TextWrapping="Wrap" AcceptsReturn="True" 
                                             VerticalContentAlignment="Top" Padding="15"/>
                                </StackPanel>

                                <!-- Remark -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Remark" FontSize="{StaticResource LabelFontSize}"
                                               Margin="{StaticResource LabelMargin}" 
                                               Style="{StaticResource HmiLabelStyle}"/>
                                    <TextBox Text="{Binding Remark, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource HmiTextBoxStyle}"
                                             Height="120" TextWrapping="Wrap" AcceptsReturn="True" 
                                             VerticalContentAlignment="Top" Padding="15"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- RIGHT PANEL: PLC CONFIGURATION -->
                    <StackPanel Grid.Column="2">
                        <Border  Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="PLC Settings" FontSize="32" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,30"/>

                                <!-- PLC No & Modbus Address (Side by Side) -->
                                <Grid Margin="0,0,0,30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock  FontSize="{StaticResource LabelFontSize}"
                                                    Margin="{StaticResource LabelMargin}" 
                                                    Text="PLC No" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding PLCNo, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock FontSize="{StaticResource LabelFontSize}" 
                                                   Margin="{StaticResource LabelMargin}" 
                                                   Text="Modbus Address" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding ModbusAddress, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>
                                </Grid>
                                
                                
                                <!-- PLC No & Modbus Address (Side by Side) -->
                                <Grid Margin="0,0,0,30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock  FontSize="{StaticResource LabelFontSize}"
                                                    Margin="{StaticResource LabelMargin}" 
                                                    Text="Data Type" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding DataType, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock FontSize="{StaticResource LabelFontSize}" 
                                                   Margin="{StaticResource LabelMargin}" 
                                                   Text="Bit No" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding BitNo, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Length & Alg No -->
                                <Grid Margin="0,0,0,30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock FontSize="{StaticResource LabelFontSize}"
                                                   Margin="{StaticResource LabelMargin}" 
                                                   Text="Length" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding Length, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"
                                                 IsEnabled="{Binding IsLengthEnabled}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Alg No" FontSize="{StaticResource LabelFontSize}" 
                                                   Margin="{StaticResource LabelMargin}" 
                                                   Style="{StaticResource HmiLabelStyle}"/>
                                        <ComboBox ItemsSource="{Binding AlgorithmTypes}"
                                                  SelectedItem="{Binding SelectedAlgorithm}"
                                                  DisplayMemberPath="DisplayName"
                                                  Style="{StaticResource HmiComboBoxStyle}"/>
                                    </StackPanel>
                                </Grid>
                                
                                
                                

                                <!-- Offset & Span -->
                                <Grid Margin="0,0,0,10"
                                      Visibility="{Binding IsOffsetSpanVisible, 
                                    Converter={StaticResource BoolToVis}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock FontSize="{StaticResource LabelFontSize}"
           Margin="{StaticResource LabelMargin}" Text="Offset" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding Offset, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock FontSize="{StaticResource LabelFontSize}"
           Margin="{StaticResource LabelMargin}" Text="Span" Style="{StaticResource HmiLabelStyle}"/>
                                        <TextBox Text="{Binding Span, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource HmiTextBoxStyle}"/>
                                    </StackPanel>
                                </Grid>

                                    <CheckBox Content="Can Write" FontSize="12" HorizontalAlignment="Left" Height="30"  Width="200"
                                    IsChecked="{Binding CanWrite}"
                                    Style="{StaticResource HmiCheckBoxStyle}"/>
                         

                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- 3. FOOTER ACTIONS -->
            <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="30">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            Width="200" Height="70"
                            FontSize="24" FontWeight="SemiBold"
                            Background="#F5F5F5" Foreground="#555555"
                            BorderBrush="#CCCCCC" BorderThickness="2"
                            Margin="0,0,30,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Save Tag" 
                            Command="{Binding SaveCommand}"
                            Width="250" Height="70"
                            FontSize="24" FontWeight="Bold"
                            Background="#007ACC" Foreground="White"
                            BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>