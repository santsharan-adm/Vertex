<UserControl x:Class="IPCSoftware.App.Controls.PieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <!-- 1. PIE CANVAS (Draws the slices - Full Pie, no donut hole) -->
        <Canvas x:Name="PieCanvas"
                Background="Transparent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="10"/>

        <!-- 2. OVERLAY TEXT (Center text with large font size) -->
        <!-- Placed AFTER Canvas to render ON TOP of the Pie Slices -->
        <StackPanel x:Name="CenterTextPanel"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    IsHitTestVisible="False">
            <TextBlock x:Name="CenterTitle"
                       Text="{Binding CenterText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="28"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       TextAlignment="Center">
                <!-- Drop Shadow is crucial here so text is readable on top of colors -->
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="3" Opacity="0.9"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>

        <!-- 3. TOOLTIP -->
        <Border x:Name="Tooltip"
                Background="#222"
                BorderBrush="#555"
                BorderThickness="1"
                Padding="12,8"
                CornerRadius="6"
                Visibility="Collapsed"
                IsHitTestVisible="False"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="4" Opacity="0.4"/>
            </Border.Effect>

            <TextBlock x:Name="TooltipText"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="18"/>
        </Border>
    </Grid>

</UserControl>