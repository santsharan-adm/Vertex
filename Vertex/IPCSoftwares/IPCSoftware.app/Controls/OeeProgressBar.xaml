<UserControl x:Class="IPCSoftware.App.Controls.OeeProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40" Width="350">

    <!-- Main layout container -->
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <!-- Column 0: For Value Text (small fixed width) -->
            <ColumnDefinition Width="30"/>

            <!-- Column 1: For Progress Bar (takes remaining space) -->
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= LEFT VALUE TEXT ================= -->
        <!-- Displays numeric or percentage value (e.g. "75%") -->
        <TextBlock Text="{Binding ValueText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Foreground="White"
                   FontWeight="Bold"/>

        <!-- ================= PROGRESS BAR AREA ================= -->
        <Grid Grid.Column="1" Height="40">

            <!-- Background of the progress bar (dark base) -->
            <Border Background="#222" CornerRadius="4"/>

            <!-- Filled part of the progress bar -->
            <!-- The width and color are bound to properties in the UserControl -->
            <Border Background="{Binding BarColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CornerRadius="4"
                    HorizontalAlignment="Left"
                    Width="{Binding FillWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <!-- Text label displayed on top of the bar (e.g. "Running", "Idle", etc.) -->
            <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       Foreground="White"
                       FontSize="13"
                       FontWeight="SemiBold"/>
        </Grid>

        <!-- ================= ARROW INDICATOR ================= -->
        <!-- Small triangle shape (orange arrow) on the right side of the bar -->
        <Polygon Grid.Column="1"
                 Points="0,5 8,10 0,15"
                 Fill="Orange"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Margin="5"/>
    </Grid>

</UserControl>
